<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mess Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- AOS for scroll animations and Animate.css for simple animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css"
          integrity="sha512-Gk8fZ3Z6Y5Yp6YzXq4U6q6P9s7G5Jj7Xz8g7j5y9M3Yk2h5Qq1kQw3Q6r6P5w=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        :root {
            --primary: #2c3e50;
            --secondary: #3498db;
            --accent: #e74c3c;
            --light: #f8f9fa;
            --dark: #22313f;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light);
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary) !important;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #495057 !important;
            padding: 0.5rem 1rem;
        }

        .navbar {
            transition: box-shadow 0.3s ease, background-color 0.3s ease;
        }

            .navbar.scrolled {
                box-shadow: 0 8px 24px rgba(34, 49, 63, 0.08);
                background-color: rgba(255, 255, 255, 0.98) !important;
            }

        .hero {
            background-image: linear-gradient(rgba(34, 49, 63, 0.5), rgba(34, 49, 63, 0.35)), url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?auto=format&fit=crop&w=1400&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 80px 0;
        }

            .hero .lead {
                opacity: 0.95;
                max-width: 900px;
            }

        .stat-card {
            border-radius: 12px;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .stat-card:hover {
                transform: translateY(-6px) scale(1.01);
                box-shadow: 0 10px 30px rgba(46, 61, 73, 0.08);
            }

        .toast-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 2000;
        }

        footer {
            background-color: #ffffff;
            padding: 20px 0;
            font-size: 0.9rem;
            border-top: 1px solid #e9ecef;
        }

        /* Responsive tweaks */
        @@media (max-width: 576px) {
            .hero {
                padding: 40px 0;
            }
        }
    </style>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("HeadContent", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-utensils me-2"></i>Mess Management
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Left: Main Navigation -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Contact" asp-action="Index">
                                    <i class="fas fa-envelope me-1"></i>Contact Us
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Teacher"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Teacher" asp-action="Menu">
                                        <i class="fas fa-calendar-day me-1"></i>Today's Menu
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Teacher" asp-action="Attendance">
                                        <i class="fas fa-clipboard-check me-1"></i>My Attendance
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Teacher" asp-action="MyBills">
                                        <i class="fas fa-file-invoice me-1"></i>My Bills
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("MessManager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Menu" asp-action="Index">
                                        <i class="fas fa-edit me-1"></i>Manage Menu
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Teacher" asp-action="AllAttendance">
                                        <i class="fas fa-users me-1"></i>View All Attendance
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                        <i class="fas fa-users-cog me-1"></i>User Management
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Bills">
                                        <i class="fas fa-file-invoice-dollar me-1"></i>Billing Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-1"></i>Admin Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="ContactMessages">
                                        <i class="fas fa-envelope me-1"></i>Contact Messages
                                    </a>
                                </li>
                                <!-- ✅ FIXED NOTIFICATION LINK -->
                                <li class="nav-item">
                                    <a class="nav-link position-relative" asp-controller="Notifications" asp-action="Index">
                                        <i class="fas fa-bell"></i>
                                        @if (ViewBag.UnreadCount != null && (int)ViewBag.UnreadCount > 0)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size:0.65em;">
                                                @ViewBag.UnreadCount
                                            </span>
                                        }
                                        <span class="ms-1">Notifications</span>
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Right: Auth / User Info -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>Hello, @User.Identity.Name!
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <span class="dropdown-item-text">
                                            Role:
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <span class="badge bg-primary">Admin</span>
                                            }
                                            else if (User.IsInRole("MessManager"))
                                            {
                                                <span class="badge bg-warning text-dark">Mess Manager</span>
                                            }
                                            else if (User.IsInRole("Teacher"))
                                            {
                                                <span class="badge bg-success">Teacher</span>
                                            }
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-primary me-2" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div style="height:70px;"></div> <!-- spacer for fixed header -->

    <div class="container-fluid main-shell">
        <div class="row flex-nowrap">
            @if (User.Identity.IsAuthenticated)
            {
                <aside class="col-auto col-md-3 col-lg-2 px-0 bg-white border-end d-none d-md-block sidebar">
                    <div class="d-flex flex-column vh-100 p-3">
                        <div class="mb-4 small text-uppercase text-muted fw-semibold">Navigation</div>
                        <ul class="nav nav-pills flex-column gap-1">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                                   asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home me-2"></i>Overview
                                </a>
                            </li>
                            @if (User.IsInRole("Teacher"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Teacher" asp-action="Attendance">
                                        <i class="fas fa-clipboard-check me-2"></i>My Attendance
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Teacher" asp-action="MyBills">
                                        <i class="fas fa-file-invoice me-2"></i>My Bills
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Teacher" asp-action="Menu">
                                        <i class="fas fa-calendar-day me-2"></i>Today's Menu
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("MessManager"))
                            {
                                <li class="nav-item mt-3 small text-uppercase text-muted fw-semibold">Mess Manager</li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Menu" asp-action="Index">
                                        <i class="fas fa-utensils me-2"></i>Manage Menu
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Teacher" asp-action="AllAttendance">
                                        <i class="fas fa-users me-2"></i>All Attendance
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item mt-3 small text-uppercase text-muted fw-semibold">Admin</li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-gauge-high me-2"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                        <i class="fas fa-users-cog me-2"></i>Users
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Bills">
                                        <i class="fas fa-file-invoice-dollar me-2"></i>Billing
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="ContactMessages">
                                        <i class="fas fa-envelope-open-text me-2"></i>Contact Messages
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Settings" asp-action="Index">
                                        <i class="fas fa-sliders-h me-2"></i>Settings
                                    </a>
                                </li>
                            }
                        </ul>
                        <div class="mt-auto small text-muted">
                            <span class="mono">Mess v1.0</span>
                        </div>
                    </div>
                </aside>
            }

            <main role="main" class="col px-3 px-md-4 py-3 content-area">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="text-muted mt-5">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Mess Management System | Department of Computer Science
        </div>
    </footer>

    <!-- Toasts (TempData-driven) -->
    <div class="toast-container">
        @if (TempData["Success"] != null)
        {
            <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4000">
                <div class="d-flex">
                    <div class="toast-body">@TempData["Success"]</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="6000">
                <div class="d-flex">
                    <div class="toast-body">@TempData["Error"]</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Initialize AOS
        if (window.AOS) {
            AOS.init({ duration: 700, once: true });
        }

        // Show any toast elements
        document.addEventListener('DOMContentLoaded', function () {
            var toastElList = [].slice.call(document.querySelectorAll('.toast'));
            toastElList.forEach(function (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            });

            // Navbar shadow on scroll
            var nav = document.querySelector('.navbar');
            if (nav) {
                window.addEventListener('scroll', function () {
                    if (window.scrollY > 10) nav.classList.add('scrolled');
                    else nav.classList.remove('scrolled');
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>