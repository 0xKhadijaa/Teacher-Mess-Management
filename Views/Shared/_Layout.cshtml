<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Messly</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            --glass-bg: rgba(255, 255, 255, 0.75);
            --glass-border: rgba(255, 255, 255, 0.3);
            --bg-app: #f3f4f6;
            --text-main: #111827;
            --accent-glow: 0 4px 20px 0 rgba(99, 102, 241, 0.1);
        }

        [data-bs-theme="dark"] {
            --glass-bg: rgba(15, 23, 42, 0.85);
            --glass-border: rgba(255, 255, 255, 0.1);
            --bg-app: #020617;
            --text-main: #f8fafc;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-app);
            color: var(--text-main);
            min-height: 100vh;
        }

        /* --- COMPACT GLASS NAV --- */
        .navbar {
            backdrop-filter: blur(15px);
            background: var(--glass-bg) !important;
            border: 1px solid var(--glass-border);
            margin: 8px 15px; /* Reduced from 15px 25px */
            border-radius: 15px;
            box-shadow: var(--accent-glow);
            z-index: 1050;
            padding: 0.4rem 1rem; /* Compact padding */
        }

        .navbar-brand {
            font-weight: 800;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 1.3rem;
        }

        /* --- TIGHT SIDEBAR --- */
        .sidebar-container {
            position: sticky;
            top: 75px; /* Reduced to sit higher */
            height: calc(100vh - 90px);
            padding: 0 10px 0 15px;
        }

        .sidebar {
            background: var(--glass-bg);
            backdrop-filter: blur(15px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            height: 100%;
            padding: 1rem;
        }

        .nav-link {
            border-radius: 12px;
            margin-bottom: 2px;
            font-weight: 600;
            color: var(--text-main) !important;
            padding: 8px 15px; /* Compact padding */
            font-size: 0.9rem;
            transition: 0.2s ease;
        }

            .nav-link:hover {
                background: rgba(99, 102, 241, 0.08);
                transform: translateX(3px);
            }

            .nav-link.active {
                background: var(--primary-gradient) !important;
                color: white !important;
                box-shadow: 0 4px 15px -5px rgba(168, 85, 247, 0.4);
            }

        /* --- CONTENT AREA --- */
        .main-shell {
            margin-top: 5px;
        }
        /* Minimized gap below nav */

        .sidebar-label {
            font-size: 0.6rem;
            text-transform: uppercase;
            font-weight: 800;
            letter-spacing: 1px;
            opacity: 0.4;
            margin: 1rem 0 0.5rem 0.8rem;
        }

        .theme-switch {
            width: 38px;
            height: 38px;
            border-radius: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            color: #f59e0b;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg fixed-top shadow-none">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fas fa-bolt-lightning me-2"></i>MESSLY
            </a>

            <div class="ms-auto d-flex align-items-center">
                <div class="theme-switch me-3" onclick="toggleTheme()">
                    <i class="fas fa-sparkles" id="theme-icon"></i>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <button class="btn border-0 d-flex align-items-center gap-2 p-1 rounded-pill bg-white bg-opacity-10 pe-3" data-bs-toggle="dropdown">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px; font-size: 0.8rem;">
                                @User.Identity.Name.Substring(0, 1).ToUpper()
                            </div>
                            <span class="fw-bold small d-none d-md-inline">@User.Identity.Name</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg mt-2 rounded-4 p-2">
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger rounded-3 py-2">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-sm fw-bold text-primary me-2">Login</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-primary rounded-pill px-3">Join</a>
                }
            </div>
        </div>
    </nav>

    <div style="height: 75px;"></div>

    <div class="container-fluid px-0">
        <div class="row g-0">
            @if (User.Identity.IsAuthenticated)
            {
                <aside class="col-md-3 col-lg-2 d-none d-md-block sidebar-container">
                    <div class="sidebar">
                        <div class="sidebar-label">Navigation</div>
                        <nav class="nav flex-column">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="fas fa-th-large"></i> Home
                            </a>

                            @if (User.IsInRole("Teacher"))
                            {
                                <div class="sidebar-label">Faculty</div>
                                <a class="nav-link" asp-controller="Teacher" asp-action="Attendance"><i class="fas fa-calendar-check"></i> Attendance</a>
                                <a class="nav-link" asp-controller="Teacher" asp-action="MyBills"><i class="fas fa-wallet"></i> My Bills</a>
                                <a class="nav-link" asp-controller="Teacher" asp-action="Menu"><i class="fas fa-utensils"></i> Menu</a>
                            }

                            @if (User.IsInRole("MessManager"))
                            {
                                <div class="sidebar-label">Kitchen</div>
                                <a class="nav-link" asp-controller="Menu" asp-action="Index"><i class="fas fa-clipboard-list"></i> Menu Manager</a>
                                <a class="nav-link" asp-controller="Teacher" asp-action="AllAttendance"><i class="fas fa-users"></i> All Attendance</a>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="sidebar-label">Admin</div>
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-chart-line"></i> Analytics</a>
                                <a class="nav-link" asp-controller="Admin" asp-action="Users"><i class="fas fa-user-shield"></i> Users</a>
                                <a class="nav-link" asp-controller="Admin" asp-action="Bills"><i class="fas fa-receipt"></i> Billing</a>
                                <a class="nav-link" asp-controller="Settings" asp-action="Index"><i class="fas fa-cog"></i> Settings</a>
                            }
                        </nav>
                    </div>
                </aside>
            }

            <main role="main" class="@(User.Identity.IsAuthenticated ? "col-md-9 col-lg-10" : "col-12") px-4 main-shell">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

    <script>
        if (typeof AOS !== 'undefined') AOS.init({ duration: 600, once: true });

        function applyTheme(theme) {
            document.documentElement.setAttribute('data-bs-theme', theme);
            localStorage.setItem('theme', theme);
            const icon = document.getElementById('theme-icon');
            if (icon) icon.className = theme === 'dark' ? 'fas fa-sun text-warning' : 'fas fa-sparkles text-warning';
        }

        function toggleTheme() {
            const current = document.documentElement.getAttribute('data-bs-theme');
            applyTheme(current === 'dark' ? 'light' : 'dark');
        }

        applyTheme(localStorage.getItem('theme') || 'light');
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>