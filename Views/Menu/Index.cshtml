@model List<MessManagementSystem.Models.Shared.MenuItem>

@{
    ViewData["Title"] = "Manage Menu";
}

<div class="container-fluid py-1">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-2" data-aos="fade-down">
        <div>
            <h3 class="fw-800 mb-0 text-dark-emphasis">Weekly Planner</h3>
            <p class="text-muted small mb-0">
                <i class="fas fa-calendar-week me-1 text-primary"></i> 7-Day Menu Cycle
                <span class="mx-2 opacity-25">|</span>
                <span class="text-primary fw-600">Active Period: @Model.FirstOrDefault()?.Date.ToString("MMM dd") - @Model.LastOrDefault()?.Date.ToString("MMM dd")</span>
            </p>
        </div>
    </div>

    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-xl-4" data-aos="fade-up">
                <div class="card border-0 shadow-sm h-100 transition-all hover-lift"
                     style="border-radius: 24px; background: var(--glass-bg); backdrop-filter: blur(10px);">

                    <div class="p-4 border-bottom border-opacity-10 d-flex justify-content-between align-items-center"
                         style="background: rgba(99, 102, 241, 0.03);">
                        <div>
                            <h5 class="fw-800 mb-0 text-dark-emphasis">@item.Date.ToString("dddd")</h5>
                            <small class="text-muted fw-600">@item.Date.ToString("dd MMMM, yyyy")</small>
                        </div>
                        <div class="bg-primary bg-opacity-10 text-primary px-3 py-1 rounded-pill small fw-800">
                            DAY @(Model.IndexOf(item) + 1)
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <div class="d-flex flex-column gap-3">
                            <div class="d-flex gap-3">
                                <div class="bg-primary bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center flex-shrink-0" style="width: 40px; height: 40px;">
                                    <i class="fas fa-mug-saucer text-primary small"></i>
                                </div>
                                <div>
                                    <small class="text-uppercase fw-800 opacity-50 d-block mb-1" style="font-size: 0.65rem; letter-spacing: 0.5px;">Breakfast</small>
                                    <span class="fw-600 text-dark-emphasis">@item.Breakfast</span>
                                </div>
                            </div>

                            <div class="d-flex gap-3">
                                <div class="bg-success bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center flex-shrink-0" style="width: 40px; height: 40px;">
                                    <i class="fas fa-utensils text-success small"></i>
                                </div>
                                <div>
                                    <small class="text-uppercase fw-800 opacity-50 d-block mb-1" style="font-size: 0.65rem; letter-spacing: 0.5px;">Lunch</small>
                                    <span class="fw-600 text-dark-emphasis">@item.Lunch</span>
                                </div>
                            </div>

                            <div class="d-flex gap-3">
                                <div class="bg-warning bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center flex-shrink-0" style="width: 40px; height: 40px;">
                                    <i class="fas fa-moon text-warning small"></i>
                                </div>
                                <div>
                                    <small class="text-uppercase fw-800 opacity-50 d-block mb-1" style="font-size: 0.65rem; letter-spacing: 0.5px;">Dinner</small>
                                    <span class="fw-600 text-dark-emphasis">@item.Dinner</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-top border-opacity-10 p-3">
                        <a asp-action="Edit"
                           asp-route-id="@item.Id"
                           asp-route-date="@item.Date.ToString("yyyy-MM-dd")"
                           class="btn btn-primary w-100 rounded-pill fw-bold py-2 shadow-sm transition-all hover-lift">
                            <i class="fas fa-pen-to-square me-2"></i> Edit Menu
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>