@model List<MessManagementSystem.Models.Shared.MenuItem>

@{
    ViewData["Title"] = "Manage Menu";
}

<div class="container-fluid mt-2 mt-md-0">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
        <div>
            <h2 class="h4 mb-1">Weekly Menu</h2>
            <small class="text-muted">Plan and adjust breakfast, lunch &amp; dinner for the next 7 days.</small>
        </div>
    </div>

    <div class="row g-3 mt-1">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-xl-4" data-aos="fade-up">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0">@item.Date.ToString("ddd, dd MMM")</h5>
                            <span class="badge bg-light text-dark">
                                @item.Date.ToString("MMMM")
                            </span>
                        </div>
                        <ul class="list-unstyled small flex-grow-1 mb-3">
                            <li class="mb-1">
                                <span class="fw-semibold">Breakfast:</span>
                                <span class="text-muted">@item.Breakfast</span>
                            </li>
                            <li class="mb-1">
                                <span class="fw-semibold">Lunch:</span>
                                <span class="text-muted">@item.Lunch</span>
                            </li>
                            <li>
                                <span class="fw-semibold">Dinner:</span>
                                <span class="text-muted">@item.Dinner</span>
                            </li>
                        </ul>
                        <div class="text-end">
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               asp-route-date="@item.Date.ToString("yyyy-MM-dd")"
                               class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-pen me-1"></i>Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>