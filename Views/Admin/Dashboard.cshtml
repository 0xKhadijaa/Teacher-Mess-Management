@model MessManagementSystem.Models.Shared.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-2">
    <div class="row g-4 mb-4">
        <div class="col-lg-12" data-aos="fade-down">
            <div class="card bg-primary text-white p-4 border-0 overflow-hidden position-relative shadow-lg" style="background: var(--primary-gradient) !important; border-radius: 30px;">
                <div class="position-relative" style="z-index: 2;">
                    <h2 class="fw-800 h1 mb-1">Executive Overview</h2>
                    <p class="opacity-75 lead mb-0">System heartbeat: Monitoring faculty, revenue, and logistics.</p>
                </div>
                <i class="fas fa-shield-halved position-absolute end-0 bottom-0 opacity-10" style="font-size: 12rem; transform: translate(15%, 25%);"></i>
            </div>
        </div>

        <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
            <div class="card p-4 border-0 shadow-sm transition-all hover-lift" style="border-radius: 24px; background: var(--glass-bg); border: 1px solid white;">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                        <i class="fas fa-user-tie text-primary h4 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="text-muted fw-bold small text-uppercase ls-1 mb-1">Total Faculty</h6>
                        <h3 class="fw-800 mb-0">@Model.TeacherCount</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
            <div class="card p-4 border-0 shadow-sm transition-all hover-lift" style="border-radius: 24px; background: var(--glass-bg); border: 1px solid white;">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <i class="fas fa-coins text-success h4 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="text-muted fw-bold small text-uppercase ls-1 mb-1">Total Revenue</h6>
                        <h3 class="fw-800 mb-0">₹@Model.TotalRevenue</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4" data-aos="zoom-in" data-aos-delay="300">
            <div class="card p-4 border-0 shadow-sm transition-all hover-lift" style="border-radius: 24px; background: var(--glass-bg); border: 1px solid white;">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
                        <i class="fas fa-triangle-exclamation text-danger h4 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="text-muted fw-bold small text-uppercase ls-1 mb-1">Open Issues</h6>
                        <h3 class="fw-800 mb-0">@Model.OpenIssues</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8" data-aos="fade-up">
            <div class="card h-100 p-4 border-0 shadow-sm" style="border-radius: 28px; background: var(--glass-bg);">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-800 mb-0">Income Stream Analytics</h5>
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 rounded-pill fw-bold">6-Month View</span>
                </div>
                <div class="chart-container" style="position: relative; height:320px; width:100%">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
            <div class="card h-100 p-4 border-0 shadow-sm" style="border-radius: 28px; background: var(--glass-bg);">
                <h5 class="fw-800 mb-4">Admin Hub</h5>

                <div class="d-flex gap-3 mb-4 p-3 rounded-4 bg-white bg-opacity-50 border border-white">
                    <div class="bg-warning rounded-circle flex-shrink-0" style="width: 12px; height: 12px; margin-top: 5px;"></div>
                    <div>
                        <h6 class="fw-bold mb-1 small">Pending Settlements</h6>
                        <p class="small text-muted mb-0">You have @Model.TotalBills generated this cycle. @Model.OpenIssues require intervention.</p>
                    </div>
                </div>

                <div class="d-flex gap-3 mb-4 p-3 rounded-4 bg-white bg-opacity-50 border border-white">
                    <div class="bg-primary rounded-circle flex-shrink-0" style="width: 12px; height: 12px; margin-top: 5px;"></div>
                    <div>
                        <h6 class="fw-bold mb-1 small">System Settings</h6>
                        <p class="small text-muted mb-0">System rates are active. Next auto-billing cycle: 1st of the month.</p>
                    </div>
                </div>

                <div class="mt-auto d-grid gap-2">
                    <a asp-controller="Admin" asp-action="Bills" class="btn btn-primary rounded-pill py-3 fw-bold shadow-lg">
                        <i class="fas fa-file-invoice-dollar me-2"></i> Manage All Bills
                    </a>
                    <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary rounded-pill py-3 fw-bold border-2">
                        <i class="fas fa-users-cog me-2"></i> User Directory
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function () {
            var ctx = document.getElementById('revenueChart');
            if (!ctx) return;

            // Safe serialization of data from your C# Model
            var labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyRevenue.Select(m => m.Month + " " + m.Year)));
            var data = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyRevenue.Select(m => m.Revenue)));

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Revenue (₹)',
                        data: data,
                        backgroundColor: '#6366f1',
                        hoverBackgroundColor: '#a855f7',
                        borderRadius: 12,
                        barThickness: 28,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#1e1b4b',
                            padding: 12,
                            titleFont: { size: 14, weight: 'bold' },
                            bodyFont: { size: 13 },
                            cornerRadius: 10
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0,0,0,0.03)', drawBorder: false },
                            ticks: { color: '#64748b', font: { weight: '600' } }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#64748b', font: { weight: '600' } }
                        }
                    }
                }
            });
        })();
    </script>
}