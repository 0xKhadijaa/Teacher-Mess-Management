@model List<MessManagementSystem.Models.Shared.Bill>

@{
    ViewData["Title"] = "Billing Dashboard";
}

<div class="container-fluid mt-2 mt-md-0">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
        <div>
            <h2 class="h4 mb-1">Billing Dashboard</h2>
            <small class="text-muted">Generate monthly bills, mark payments and review issues.</small>
        </div>
        <div class="mt-2 mt-md-0">
            <a asp-action="BillIssues" class="btn btn-outline-secondary btn-sm me-1">
                <i class="fas fa-bug me-1"></i>Bill Issues
            </a>
            <a asp-controller="Settings" asp-action="Index" class="btn btn-outline-secondary btn-sm me-1">
                <i class="fas fa-sliders-h me-1"></i>Rates &amp; Settings
            </a>
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#generateModal">
                <i class="fas fa-plus-circle me-1"></i>Generate Bills
            </button>
        </div>
    </div>

    <form method="get" class="card mb-3 shadow-sm border-0">
        <div class="card-body row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label small text-muted">Teacher</label>
                <input type="text" name="search" value="@ViewBag.Search" class="form-control form-control-sm" placeholder="Name or email" />
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted">Status</label>
                <select name="status" class="form-select form-select-sm">
                    <option value="">All</option>
                    <option value="paid" selected="@(ViewBag.Status?.ToString() == "paid")">Paid</option>
                    <option value="pending" selected="@(ViewBag.Status?.ToString() == "pending")">Pending</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted">Month</label>
                <input type="month" name="month" value="@ViewBag.Month" class="form-control form-control-sm" />
            </div>
            <div class="col-md-2 text-end">
                <button type="submit" class="btn btn-sm btn-primary w-100 mb-1">
                    <i class="fas fa-filter me-1"></i>Apply
                </button>
                <a asp-action="Bills" class="btn btn-sm btn-link w-100 text-muted">Reset</a>
            </div>
        </div>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No bills yet. Generate monthly bills using the button above.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var bill in Model)
            {
                <div class="col-md-6" data-aos="fade-up">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong>@bill.Student?.FullName</strong>
                                    <div class="text-muted">@bill.BillingPeriodStart.ToString("MMMM yyyy")</div>
                                </div>
                                <div class="text-end small">
                                    <div class="fw-bold">₹@bill.TotalAmount</div>
                                    <div class="text-muted">Paid: ₹@bill.AmountPaid</div>
                                    @if (!bill.IsPaid && bill.PreviousDues > 0)
                                    {
                                        <div class="text-muted">Prev. dues: ₹@bill.PreviousDues</div>
                                    }
                                </div>
                            </div>
                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <div>
                                    @if (bill.IsPaid)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </div>
                                <div>
                                    @if (!bill.IsPaid)
                                    {
                                        <button class="btn btn-sm btn-success js-mark-paid"
                                                data-bill-id="@bill.Id">
                                            Mark as Paid
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @{
        int page = ViewBag.Page ?? 1;
        int pageSize = ViewBag.PageSize ?? 10;
        int total = ViewBag.TotalCount ?? 0;
        int totalPages = (int)Math.Ceiling(total / (double)pageSize);
    }

    @if (totalPages > 1)
    {
        <nav aria-label="Bills pagination" class="mt-3">
            <ul class="pagination pagination-sm">
                <li class="page-item @(page <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Bills"
                       asp-route-page="@(page - 1)"
                       asp-route-search="@ViewBag.Search"
                       asp-route-status="@ViewBag.Status"
                       asp-route-month="@ViewBag.Month">Previous</a>
                </li>
                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Bills"
                           asp-route-page="@i"
                           asp-route-search="@ViewBag.Search"
                           asp-route-status="@ViewBag.Status"
                           asp-route-month="@ViewBag.Month">@i</a>
                    </li>
                }
                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Bills"
                       asp-route-page="@(page + 1)"
                       asp-route-search="@ViewBag.Search"
                       asp-route-status="@ViewBag.Status"
                       asp-route-month="@ViewBag.Month">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Generate Modal -->
<div class="modal fade" id="generateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="GenerateBills" method="post">
                <div class="modal-header">
                    <h5>Generate Monthly Bills</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Select Month</label>
                        <input type="month" name="month" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Generate</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // AJAX mark-as-paid with toast feedback
        (function () {
            document.querySelectorAll('.js-mark-paid').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    var id = this.getAttribute('data-bill-id');
                    var self = this;
                    if (!id) return;
                    self.disabled = true;
                    fetch('@Url.Action("MarkAsPaid", "Admin")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: 'id=' + encodeURIComponent(id)
                    }).then(function (res) {
                        if (res.ok) {
                            if (window.messUI) window.messUI.showToast('Bill marked as paid.', 'success');
                            // Soft reload just this card by refreshing page for now
                            window.location.reload();
                        } else {
                            if (window.messUI) window.messUI.showToast('Failed to update bill.', 'danger');
                            self.disabled = false;
                        }
                    }).catch(function () {
                        if (window.messUI) window.messUI.showToast('Network error while updating bill.', 'danger');
                        self.disabled = false;
                    });
                });
            });
        })();
    </script>
}