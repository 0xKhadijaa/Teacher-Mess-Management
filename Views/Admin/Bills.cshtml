@model List<MessManagementSystem.Models.Shared.Bill>

@{
    ViewData["Title"] = "Billing Management";
}

<style>
    /* Purple Theme Overrides */
    .text-primary {
        color: var(--primary-purple) !important;
    }

    .btn-primary {
        background: var(--primary-gradient) !important;
        border: none !important;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
        }

    .page-item.active .page-link {
        background: var(--primary-gradient) !important;
        border: none !important;
    }

    .form-check-input:checked {
        background-color: var(--primary-purple) !important;
        border-color: var(--primary-purple) !important;
    }

    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.1) !important;
        }
</style>

<div class="container-fluid py-2">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div data-aos="fade-right">
            <h2 class="fw-800 mb-0 text-dark-emphasis">
                <i class="fas fa-file-invoice-dollar me-2 text-primary"></i> Billing Hub
            </h2>
            <p class="text-muted small mb-0">Manage faculty invoices, track collections, and audit discrepancies.</p>
        </div>
        <div class="d-flex gap-2" data-aos="fade-left">
            <a asp-action="BillIssues" class="btn btn-sm btn-light rounded-pill border fw-800 px-3 text-muted">
                <i class="fas fa-bug me-1 text-warning"></i> Issues
            </a>
            <button class="btn btn-primary btn-sm rounded-pill px-4 fw-800 shadow-sm text-white" data-bs-toggle="modal" data-bs-target="#generateModal">
                <i class="fas fa-plus-circle me-1"></i> Generate Bills
            </button>
        </div>
    </div>

    <form method="get" class="card border-0 shadow-sm mb-4" style="border-radius: 20px; background: var(--glass-bg); backdrop-filter: blur(10px);">
        <div class="card-body p-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-800 small text-uppercase opacity-50 ls-1"><i class="fas fa-search me-1 text-primary"></i> Faculty Name</label>
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control border-0 bg-light rounded-3 py-2 fw-600" placeholder="Search name or email..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-800 small text-uppercase opacity-50 ls-1"><i class="fas fa-filter me-1 text-primary"></i> Status</label>
                    <select name="status" class="form-select border-0 bg-light rounded-3 py-2 fw-600">
                        <option value="">All Payments</option>
                        <option value="paid" selected="@(ViewBag.Status?.ToString() == "paid")">Paid</option>
                        <option value="pending" selected="@(ViewBag.Status?.ToString() == "pending")">Pending</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-800 small text-uppercase opacity-50 ls-1"><i class="fas fa-calendar-alt me-1 text-primary"></i> Cycle</label>
                    <input type="month" name="month" value="@ViewBag.Month" class="form-control border-0 bg-light rounded-3 py-2 fw-600" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-3 fw-800 py-2 mb-1 text-white">Apply</button>
                    <a asp-action="Bills" class="d-block text-center text-muted small text-decoration-none fw-800 mt-1">Clear All</a>
                </div>
            </div>
        </div>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert border-0 shadow-sm rounded-4 mb-4 bg-success bg-opacity-10 text-success d-flex align-items-center animate__animated animate__fadeIn">
            <i class="fas fa-check-circle me-3 h5 mb-0"></i>
            <span class="small fw-700">@TempData["Success"]</span>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="card border-0 shadow-sm p-5 text-center" style="border-radius: 24px; background: white;">
            <div class="bg-light d-inline-flex p-4 rounded-circle mb-3">
                <i class="fas fa-receipt fa-3x text-muted opacity-25"></i>
            </div>
            <h5 class="text-muted fw-800">No records matching your search.</h5>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var bill in Model)
            {
                <div class="col-md-6 col-xl-4" data-aos="fade-up">
                    <div class="card border-0 shadow-sm transition-all hover-lift h-100" style="border-radius: 24px; background: white; border: 1px solid rgba(0,0,0,0.02);">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-4">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm"
                                         style="width: 48px; height: 48px; background: rgba(99, 102, 241, 0.1); color: var(--primary-purple);">
                                        <i class="fas fa-user-tie"></i>
                                    </div>
                                    <div>
                                        <h6 class="fw-800 mb-0 text-dark-emphasis">@bill.Student?.FullName</h6>
                                        <small class="text-muted fw-600">@bill.BillingPeriodStart.ToString("MMMM yyyy")</small>
                                    </div>
                                </div>
                                @if (bill.IsPaid)
                                {
                                    <span class="badge rounded-pill bg-success bg-opacity-10 text-success px-3 py-2 fw-800 border border-success border-opacity-10">SETTLED</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning px-3 py-2 fw-800 border border-warning border-opacity-10">PENDING</span>
                                }
                            </div>

                            <div class="p-3 rounded-4 mb-4 border border-light" style="background: #fafafa;">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="small text-muted fw-700 text-uppercase ls-1">Total Bill</span>
                                    <span class="fw-800 text-dark">₹@bill.TotalAmount.ToString("N2")</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="small text-muted fw-700 text-uppercase ls-1">Paid to Date</span>
                                    <span class="fw-800 text-success">₹@bill.AmountPaid.ToString("N2")</span>
                                </div>
                                @if (!bill.IsPaid && bill.PreviousDues > 0)
                                {
                                    <div class="d-flex justify-content-between border-top mt-2 pt-2 text-danger">
                                        <span class="small fw-700 text-uppercase ls-1">Previous Arrears</span>
                                        <span class="fw-800">₹@bill.PreviousDues.ToString("N2")</span>
                                    </div>
                                }
                            </div>

                            <div class="d-grid">
                                @if (!bill.IsPaid)
                                {
                                    <button class="btn btn-primary rounded-pill fw-800 js-mark-paid shadow-sm text-white" data-bill-id="@bill.Id">
                                        <i class="fas fa-check-circle me-2"></i> Mark as Paid
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-light text-muted border-0 rounded-pill fw-800" disabled>
                                        <i class="fas fa-lock me-2"></i> Transaction Closed
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @{
        int pageNum = ViewBag.Page ?? 1;
        int pageSize = ViewBag.PageSize ?? 10;
        int total = ViewBag.TotalCount ?? 0;
        int totalPages = (int)Math.Ceiling(total / (double)pageSize);
    }

    @if (totalPages > 1)
    {
        <nav class="mt-5 d-flex justify-content-center">
            <ul class="pagination gap-2">
                <li class="page-item @(pageNum <= 1 ? "disabled" : "")">
                    <a class="page-link border-0 rounded-circle shadow-sm text-primary p-0 d-flex align-items-center justify-content-center"
                       style="width: 40px; height: 40px;"
                       asp-action="Bills" asp-route-page="@(pageNum - 1)" asp-route-search="@ViewBag.Search" asp-route-status="@ViewBag.Status" asp-route-month="@ViewBag.Month">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == pageNum ? "active" : "")">
                        <a class="page-link border-0 rounded-circle shadow-sm @(i == pageNum ? "text-white" : "bg-white text-muted") p-0 d-flex align-items-center justify-content-center fw-800"
                           style="width: 40px; height: 40px;"
                           asp-action="Bills" asp-route-page="@i" asp-route-search="@ViewBag.Search" asp-route-status="@ViewBag.Status" asp-route-month="@ViewBag.Month">@i</a>
                    </li>
                }
                <li class="page-item @(pageNum >= totalPages ? "disabled" : "")">
                    <a class="page-link border-0 rounded-circle shadow-sm text-primary p-0 d-flex align-items-center justify-content-center"
                       style="width: 40px; height: 40px;"
                       asp-action="Bills" asp-route-page="@(pageNum + 1)" asp-route-search="@ViewBag.Search" asp-route-status="@ViewBag.Status" asp-route-month="@ViewBag.Month">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

<div class="modal fade" id="generateModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 30px; background: var(--glass-bg); backdrop-filter: blur(20px);">
            <form asp-action="GenerateBills" method="post">
                <div class="modal-header border-0 p-4 pb-0">
                    <h5 class="fw-800 mb-0 text-dark-emphasis">Invoice Generation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-4 mb-4 text-primary d-flex gap-3 align-items-center border border-primary border-opacity-10">
                        <i class="fas fa-circle-info fa-lg"></i>
                        <p class="small mb-0 fw-600">Calculates meals, utility rates, and previous dues for all active faculty.</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-800 small text-uppercase ls-1 opacity-50">Target Billing Month</label>
                        <input type="month" name="month" class="form-control border-0 bg-light py-3 rounded-4 fw-800" required />
                    </div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-800 text-muted" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-5 fw-800 text-white shadow-lg">Start Process</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            document.querySelectorAll('.js-mark-paid').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    var id = this.getAttribute('data-bill-id');
                    var self = this;
                    if (!id) return;
                    self.disabled = true;
                    self.style.background = '#6366f1';
                    self.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Settling...';

                    fetch('@Url.Action("MarkAsPaid", "Admin")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: 'id=' + encodeURIComponent(id)
                    }).then(function (res) {
                        if (res.ok) {
                            window.location.reload();
                        } else {
                            self.disabled = false;
                            self.innerText = 'Try Again';
                        }
                    }).catch(function () {
                        self.disabled = false;
                        self.innerText = 'Error';
                    });
                });
            });
        })();
    </script>
}