@* Redesigned Create User Form for Admin - Messly Purple Edition *@
@{
    ViewData["Title"] = "Create User";
}

<style>
    /* Force Purple Theme Overrides */
    .text-purple {
        color: var(--primary-purple) !important;
    }

    .baddie-input:focus {
        background-color: #fff !important;
        border-color: var(--primary-purple) !important;
        box-shadow: 0 10px 25px -10px rgba(99, 102, 241, 0.25) !important;
        outline: none;
    }

    .btn-purple-gradient {
        background: var(--primary-gradient) !important;
        border: none !important;
        color: white !important;
        box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
    }

        .btn-purple-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.3);
        }

    .ls-1 {
        letter-spacing: 1px;
    }

    /* Custom scroll for multi-select */
    select[multiple]::-webkit-scrollbar {
        width: 5px;
    }

    select[multiple]::-webkit-scrollbar-thumb {
        background: var(--primary-purple);
        border-radius: 10px;
    }
</style>

<div class="container-fluid py-4">
    <div class="mb-4" data-aos="fade-down">
        <h2 class="fw-800 mb-0 text-dark-emphasis">
            <i class="fas fa-user-plus me-2 text-purple"></i> Onboard New User
        </h2>
        <p class="text-muted small">Register new faculty members or staff with specific system permissions.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card border-0 shadow-lg animate__animated animate__fadeInUp" style="border-radius: 28px; background: var(--glass-bg); backdrop-filter: blur(20px); border: 1px solid rgba(255,255,255,0.5);">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="CreateUser" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row g-5">
                            <div class="col-md-6 border-end border-white border-opacity-50">
                                <h5 class="fw-800 mb-4 text-purple small text-uppercase ls-1"><i class="fas fa-key me-2"></i> 1. Account Credentials</h5>

                                <div class="mb-4">
                                    <label class="form-label fw-800 small opacity-50 text-uppercase ls-1">Email Address</label>
                                    <div class="input-group shadow-sm rounded-3 overflow-hidden">
                                        <span class="input-group-text bg-white border-0 px-3"><i class="fas fa-envelope text-purple opacity-50"></i></span>
                                        <input type="email" name="email" class="form-control bg-white border-0 py-3 baddie-input" placeholder="email@university.edu" required />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-800 small opacity-50 text-uppercase ls-1">Initial Password</label>
                                    <div class="input-group shadow-sm rounded-3 overflow-hidden">
                                        <span class="input-group-text bg-white border-0 px-3"><i class="fas fa-lock text-purple opacity-50"></i></span>
                                        <input type="password" name="password" class="form-control bg-white border-0 py-3 baddie-input" placeholder="••••••••" required />
                                    </div>
                                    <small class="text-muted mt-2 d-block small">Ensure the user changes this upon first login.</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h5 class="fw-800 mb-4 text-purple small text-uppercase ls-1"><i class="fas fa-id-card me-2"></i> 2. Profile & Permissions</h5>

                                <div class="row g-4">
                                    <div class="col-12">
                                        <label class="form-label fw-800 small opacity-50 text-uppercase ls-1">Full Name</label>
                                        <input type="text" name="fullName" class="form-control bg-white border-0 py-3 rounded-3 shadow-sm baddie-input" placeholder="e.g. Dr. John Smith" />
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label fw-800 small opacity-50 text-uppercase ls-1">Department</label>
                                        <input type="text" name="department" class="form-control bg-white border-0 py-3 rounded-3 shadow-sm baddie-input" placeholder="e.g. Computer Science" />
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label fw-800 small opacity-50 text-uppercase ls-1">Access Roles</label>
                                        <select name="roles" class="form-select bg-white border-0 rounded-3 py-3 shadow-sm baddie-input" multiple style="height: 110px;">
                                            @foreach (var r in (ViewBag.Roles as List<string> ?? new List<string>()))
                                            {
                                                <option value="@r" class="py-2 px-3 fw-600">@r</option>
                                            }
                                        </select>
                                        <div class="bg-purple-light p-2 rounded-3 mt-3 d-flex align-items-center gap-2" style="background: rgba(99, 102, 241, 0.05);">
                                            <i class="fas fa-info-circle text-purple small"></i>
                                            <small class="text-muted fw-600" style="font-size: 0.7rem;">Hold <strong>Ctrl</strong> (or <strong>Cmd</strong>) to select multiple roles.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-5 opacity-10">

                        <div class="d-flex flex-column flex-md-row justify-content-end gap-3">
                            <a asp-action="Users" class="btn btn-light rounded-pill px-4 py-2 fw-800 text-muted border-0">
                                <i class="fas fa-times me-2"></i> CANCEL
                            </a>
                            <button type="submit" class="btn btn-purple-gradient rounded-pill px-5 py-3 fw-900 transition-all">
                                <i class="fas fa-user-plus me-2"></i> CONFIRM & ONBOARD
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>