@model List<MessManagementSystem.Models.Shared.BillIssue>

@{
    ViewData["Title"] = "Bill Issues";
}

<div class="container-fluid py-2">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div data-aos="fade-right">
            <h2 class="fw-800 mb-0 text-dark-emphasis">
                <i class="fas fa-dispute me-2 text-primary"></i> Dispute Resolution
            </h2>
            <p class="text-muted small mb-0">Review and resolve billing discrepancies reported by faculty members.</p>
        </div>

        <div data-aos="fade-left">
            <div class="bg-white border rounded-pill px-3 py-2 shadow-sm d-inline-flex align-items-center">
                <span class="small fw-800 text-uppercase opacity-50 me-2">Pending:</span>
                <span class="badge bg-danger rounded-pill">@Model.Count(x => !x.IsResolved)</span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm p-5 text-center" style="border-radius: 24px; background: var(--glass-bg);">
            <div class="bg-success bg-opacity-10 d-inline-flex p-4 rounded-circle mb-3 mx-auto">
                <i class="fas fa-check-double fa-3x text-success"></i>
            </div>
            <h5 class="fw-700 text-dark-emphasis">Inbox is Clear!</h5>
            <p class="small text-muted mb-0">No new bill issues have been reported recently.</p>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 24px; background: var(--glass-bg);" data-aos="fade-up">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background: rgba(99, 102, 241, 0.04);">
                        <tr>
                            <th class="ps-4 py-3 border-0 small text-uppercase fw-800 opacity-50">Faculty Member</th>
                            <th class="py-3 border-0 small text-uppercase fw-800 opacity-50">Bill Period</th>
                            <th class="py-3 border-0 small text-uppercase fw-800 opacity-50">Issue Description</th>
                            <th class="py-3 border-0 small text-uppercase fw-800 opacity-50">Reported Date</th>
                            <th class="py-3 border-0 small text-uppercase fw-800 opacity-50 text-center">Status</th>
                            <th class="pe-4 py-3 border-0 small text-uppercase fw-800 opacity-50 text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var issue in Model.OrderByDescending(x => x.CreatedAt))
                        {
                            <tr class="transition-all">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 35px; height: 35px;">
                                            <i class="fas fa-user-tie small"></i>
                                        </div>
                                        <div>
                                            <div class="fw-800 text-dark-emphasis">@issue.Teacher?.FullName</div>
                                            <div class="small text-muted" style="font-size: 0.7rem;">ID: #@issue.Id</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <span class="badge rounded-pill bg-light text-dark border px-3 py-2 fw-600">
                                        @issue.Bill?.BillingPeriodStart.ToString("MMM yyyy")
                                    </span>
                                </td>
                                <td class="py-3" style="max-width: 250px;">
                                    <div class="small text-muted text-truncate" title="@issue.IssueDescription">
                                        @issue.IssueDescription
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="small fw-600">
                                        <i class="far fa-calendar-alt me-1 text-primary"></i>
                                        @issue.CreatedAt.ToString("dd MMM yyyy")
                                    </div>
                                </td>
                                <td class="py-3 text-center">
                                    @if (issue.IsResolved)
                                    {
                                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success px-3 py-2 fw-800">
                                            <i class="fas fa-check-circle me-1"></i> Resolved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning px-3 py-2 fw-800">
                                            <i class="fas fa-clock me-1"></i> Pending
                                        </span>
                                    }
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <a asp-action="ResolveIssue" asp-route-id="@issue.Id"
                                       class="btn btn-sm btn-primary rounded-pill px-4 fw-bold shadow-sm transition-all hover-lift">
                                        <i class="fas fa-magnifying-glass me-1"></i> View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3) !important;
    }

    .table tbody tr {
        transition: background-color 0.2s ease;
    }

        .table tbody tr:hover {
            background-color: rgba(99, 102, 241, 0.02);
        }
</style>