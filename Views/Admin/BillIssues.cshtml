@model List<MessManagementSystem.Models.Shared.BillIssue>

@{
    ViewData["Title"] = "Bill Issues";
}

<style>
    /* Purple Theme Overrides */
    .text-purple {
        color: var(--primary-purple) !important;
    }

    .bg-purple-light {
        background: rgba(99, 102, 241, 0.1);
    }

    .btn-purple {
        background: var(--primary-gradient);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-purple:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.4);
            color: white;
        }

    .status-pending {
        background: rgba(245, 158, 11, 0.1) !important;
        color: #d97706 !important;
        border: 1px solid rgba(245, 158, 11, 0.2);
    }

    .status-resolved {
        background: rgba(16, 185, 129, 0.1) !important;
        color: #059669 !important;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(99, 102, 241, 0.02) !important;
    }
</style>

<div class="container-fluid py-2">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div data-aos="fade-right">
            <h2 class="fw-800 mb-0 text-dark-emphasis">
                <i class="fas fa-hand-holding-dollar me-2 text-purple"></i> Dispute Resolution
            </h2>
            <p class="text-muted small mb-0 fw-600">Review and resolve billing discrepancies reported by faculty members.</p>
        </div>

        <div data-aos="fade-left">
            <div class="bg-white border rounded-pill px-4 py-2 shadow-sm d-inline-flex align-items-center">
                <span class="small fw-800 text-uppercase opacity-50 me-2 ls-1">Live Disputes:</span>
                <span class="badge rounded-pill bg-danger shadow-sm px-3">@Model.Count(x => !x.IsResolved) Pending</span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm p-5 text-center" style="border-radius: 28px; background: var(--glass-bg); backdrop-filter: blur(10px);">
            <div class="bg-success bg-opacity-10 d-inline-flex p-4 rounded-circle mb-3 mx-auto">
                <i class="fas fa-check-double fa-3x text-success"></i>
            </div>
            <h5 class="fw-800 text-dark-emphasis">Inbox is Clear!</h5>
            <p class="small text-muted mb-0">No new bill issues have been reported recently.</p>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-lg overflow-hidden" style="border-radius: 28px; background: var(--glass-bg); backdrop-filter: blur(15px);" data-aos="fade-up">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background: rgba(99, 102, 241, 0.05);">
                        <tr>
                            <th class="ps-4 py-4 border-0 small text-uppercase fw-800 opacity-50 ls-1">Faculty Member</th>
                            <th class="py-4 border-0 small text-uppercase fw-800 opacity-50 ls-1">Bill Cycle</th>
                            <th class="py-4 border-0 small text-uppercase fw-800 opacity-50 ls-1">Discrepancy</th>
                            <th class="py-4 border-0 small text-uppercase fw-800 opacity-50 ls-1">Filed On</th>
                            <th class="py-4 border-0 small text-uppercase fw-800 opacity-50 ls-1 text-center">Status</th>
                            <th class="pe-4 py-4 border-0 small text-uppercase fw-800 opacity-50 ls-1 text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var issue in Model.OrderByDescending(x => x.CreatedAt))
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm bg-purple-light text-purple" style="width: 42px; height: 42px;">
                                            <i class="fas fa-user-tie"></i>
                                        </div>
                                        <div>
                                            <div class="fw-800 text-dark-emphasis">@issue.Teacher?.FullName</div>
                                            <div class="small text-muted fw-600" style="font-size: 0.7rem;">TICKET #@issue.Id</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <span class="fw-700 text-dark-emphasis">@issue.Bill?.BillingPeriodStart.ToString("MMMM yyyy")</span>
                                </td>
                                <td class="py-3" style="max-width: 250px;">
                                    <div class="small text-muted text-truncate fw-500" title="@issue.IssueDescription">
                                        @issue.IssueDescription
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="small fw-700 text-dark-emphasis">
                                        <i class="far fa-calendar-check me-1 text-purple"></i>
                                        @issue.CreatedAt.ToString("dd MMM yyyy")
                                    </div>
                                </td>
                                <td class="py-3 text-center">
                                    @if (issue.IsResolved)
                                    {
                                        <span class="badge rounded-pill status-resolved px-3 py-2 fw-800">
                                            <i class="fas fa-check-circle me-1"></i> RESOLVED
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill status-pending px-3 py-2 fw-800 animate__animated animate__pulse animate__infinite">
                                            <i class="fas fa-circle-exclamation me-1"></i> PENDING
                                        </span>
                                    }
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <a asp-action="ResolveIssue" asp-route-id="@issue.Id"
                                       class="btn btn-sm btn-purple rounded-pill px-4 fw-800 shadow-sm">
                                        VIEW CASE <i class="fas fa-arrow-right ms-1 small"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .ls-1 {
        letter-spacing: 1px;
    }
</style>