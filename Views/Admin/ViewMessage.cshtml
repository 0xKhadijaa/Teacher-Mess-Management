@model MessManagementSystem.Models.Shared.ContactMessage
@{
    ViewData["Title"] = "Inquiry Detail";
}

<style>
    /* Purple Custom Styles */
    .text-purple {
        color: var(--primary-purple) !important;
    }

    .bg-purple-light {
        background: rgba(99, 102, 241, 0.1) !important;
    }

    .btn-purple-gradient {
        background: var(--primary-gradient) !important;
        border: none !important;
        color: white !important;
        box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
    }

        .btn-purple-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.3);
            color: white !important;
        }

    .back-btn:hover {
        background-color: var(--primary-purple) !important;
        color: white !important;
    }

        .back-btn:hover i {
            color: white !important;
        }
</style>

<div class="container-fluid py-2">
    <div class="mb-4" data-aos="fade-down">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="ContactMessages" class="btn btn-sm btn-light rounded-circle border-0 shadow-sm back-btn"
               style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease;">
                <i class="fas fa-arrow-left text-muted"></i>
            </a>
            <div>
                <h2 class="fw-900 mb-0 text-dark-emphasis">Inquiry Details</h2>
                <p class="text-muted small mb-0">Conversation with <span class="text-purple fw-800">@Model.Email</span></p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-10">
            <div class="card border-0 shadow-lg animate__animated animate__fadeIn"
                 style="border-radius: 35px; background: var(--glass-bg); backdrop-filter: blur(25px); border: 1px solid rgba(255,255,255,0.5);">

                <div class="card-body p-4 p-md-5">
                    <div class="row g-4 mb-5 pb-4 border-bottom border-opacity-10">
                        <div class="col-md-6">
                            <label class="form-label fw-800 small text-uppercase opacity-50 ls-1 mb-2">Sender Email</label>
                            <div class="d-flex align-items-center">
                                <div class="bg-purple-light text-purple rounded-pill px-4 py-2 fw-800 shadow-sm border border-primary border-opacity-10">
                                    <i class="fas fa-envelope-open-text me-2"></i>@Model.Email
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <label class="form-label fw-800 small text-uppercase opacity-50 ls-1 mb-2">Received On</label>
                            <div class="text-dark-emphasis fw-700">
                                <i class="far fa-clock me-1 text-purple"></i> @Model.CreatedAt.ToString("f")
                            </div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <label class="form-label fw-800 small text-uppercase opacity-50 ls-1 mb-2">Subject Header</label>
                        <h3 class="fw-900 text-dark-emphasis mb-0">@Model.Subject</h3>
                    </div>

                    <div class="mb-5">
                        <label class="form-label fw-800 small text-uppercase opacity-50 ls-1 mb-2">Message Content</label>
                        <div class="p-4 rounded-4 bg-white bg-opacity-60 border border-white shadow-sm"
                             style="min-height: 200px; box-shadow: inset 0 2px 10px rgba(0,0,0,0.02) !important;">
                            <p class="mb-0 text-dark-emphasis fw-500" style="line-height: 1.8; white-space: pre-line; font-size: 1.05rem;">@Model.Message</p>
                        </div>
                    </div>

                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3 mt-5 pt-4 border-top border-opacity-10">
                        <div class="small text-muted fw-600">
                            <i class="fas fa-shield-check text-purple me-1 opacity-75"></i> Verified Inquiry via Messly Portal
                        </div>
                        <div class="d-flex gap-3">
                            <a href="mailto:@Model.Email?subject=Re: @Model.Subject"
                               class="btn btn-purple-gradient rounded-pill px-5 py-2 fw-900 transition-all">
                                <i class="fas fa-paper-plane me-2"></i> REPLY VIA EMAIL
                            </a>
                            <a asp-action="ContactMessages" class="btn btn-light rounded-pill px-4 py-2 fw-800 text-muted border-0">
                                BACK TO LIST
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ls-1 {
        letter-spacing: 1px;
    }

    .fw-900 {
        font-weight: 900;
    }

    /* Message body link styling */
    .bg-opacity-60 p a {
        color: var(--primary-purple);
        text-decoration: none;
        border-bottom: 2px solid rgba(99, 102, 241, 0.2);
        font-weight: 700;
        transition: all 0.3s;
    }

        .bg-opacity-60 p a:hover {
            border-bottom-color: var(--primary-purple);
            background: rgba(99, 102, 241, 0.05);
        }
</style>