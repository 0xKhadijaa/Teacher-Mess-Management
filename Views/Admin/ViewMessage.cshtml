@model MessManagementSystem.Models.Shared.ContactMessage
@{
    ViewData["Title"] = "Contact Message";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-info text-white">
            <h4><i class="fas fa-envelope me-2"></i> Contact Message Details</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.Email</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p><strong>Sent:</strong> @Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</p>
                </div>
            </div>
            <p><strong>Subject:</strong> @Model.Subject</p>
            <div class="alert alert-light mt-3">
                <strong>Message:</strong><br />
                @Model.Message
            </div>
            <a asp-action="ContactMessages" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Messages
            </a>
        </div>
    </div>
</div>