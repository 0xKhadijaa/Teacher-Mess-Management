@model MessManagementSystem.Models.Shared.BillIssue

@{
    ViewData["Title"] = "Issue Resolution";
}

<style>
    /* Purple Theme Overrides */
    .text-purple {
        color: var(--primary-purple) !important;
    }

    .bg-purple-light {
        background: rgba(99, 102, 241, 0.1);
    }

    .btn-purple-gradient {
        background: var(--primary-gradient) !important;
        border: none !important;
        color: white !important;
        box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
    }

        .btn-purple-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.3);
            color: white;
        }

    textarea.form-control:focus {
        background-color: #ffffff !important;
        border-color: var(--primary-purple) !important;
        box-shadow: 0 10px 25px -5px rgba(99, 102, 241, 0.2) !important;
        outline: none;
    }

    .ls-1 {
        letter-spacing: 1px;
    }
</style>

<div class="container-fluid py-2">
    <div class="mb-4" data-aos="fade-down">
        <h2 class="fw-900 mb-0 text-dark-emphasis">
            <i class="fas fa-hammer me-2 text-purple"></i> Resolve Dispute
        </h2>
        <p class="text-muted small fw-600">Finalize billing corrections and notify the faculty member of the resolution.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-10">
            <div class="card border-0 shadow-lg animate__animated animate__fadeIn"
                 style="border-radius: 35px; background: var(--glass-bg); backdrop-filter: blur(25px); border: 1px solid rgba(255,255,255,0.5);">

                <div class="card-body p-4 p-md-5">
                    <div class="p-4 rounded-4 mb-5 border border-white shadow-sm" style="background: rgba(255,255,255,0.4);">
                        <div class="row g-4 text-center text-md-start">
                            <div class="col-md-3 col-6">
                                <small class="text-uppercase fw-800 opacity-50 d-block mb-1 ls-1" style="font-size: 0.6rem;">Dispute Ticket</small>
                                <span class="fw-800 text-purple">#@Model.Id</span>
                            </div>
                            <div class="col-md-3 col-6">
                                <small class="text-uppercase fw-800 opacity-50 d-block mb-1 ls-1" style="font-size: 0.6rem;">Faculty Name</small>
                                <span class="fw-800 text-dark">@Model.Teacher?.FullName</span>
                            </div>
                            <div class="col-md-3 col-6">
                                <small class="text-uppercase fw-800 opacity-50 d-block mb-1 ls-1" style="font-size: 0.6rem;">Bill Cycle</small>
                                <span class="fw-800 text-dark">@Model.Bill?.BillingPeriodStart.ToString("MMM yyyy")</span>
                            </div>
                            <div class="col-md-3 col-6">
                                <small class="text-uppercase fw-800 opacity-50 d-block mb-1 ls-1" style="font-size: 0.6rem;">Amount Due</small>
                                <span class="fw-900 text-purple">₹@Model.Bill?.TotalAmount.ToString("N0")</span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <label class="form-label fw-800 small text-uppercase text-danger opacity-75 mb-3 ls-1">
                            <i class="fas fa-comment-slash me-2"></i> Teacher's Claim
                        </label>
                        <div class="p-4 rounded-4 bg-white shadow-sm border-start border-danger border-5">
                            <p class="mb-0 fw-600 text-dark-emphasis lh-base">@Model.IssueDescription</p>
                            <hr class="my-3 opacity-05">
                            <div class="d-flex align-items-center gap-2">
                                <i class="far fa-clock text-muted small"></i>
                                <small class="text-muted fw-500">Reported on @Model.CreatedAt.ToString("f")</small>
                            </div>
                        </div>
                    </div>

                    @if (Model.IsResolved)
                    {
                        <div class="animate__animated animate__fadeIn">
                            <label class="form-label fw-800 small text-uppercase text-success opacity-75 mb-3 ls-1">
                                <i class="fas fa-check-double me-2"></i> Closed Resolution
                            </label>
                            <div class="p-4 rounded-4 border border-success border-opacity-20" style="background: rgba(16, 185, 129, 0.05);">
                                <h6 class="fw-900 text-success mb-2">Ticket Resolved</h6>
                                <p class="mb-0 fw-600 text-dark">@Model.ResolutionNotes</p>
                                <div class="mt-3 pt-3 border-top border-success border-opacity-10">
                                    <small class="text-muted fw-500">Process completed by Admin on @Model.ResolvedAt?.ToString("dd MMM yyyy")</small>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <form asp-action="ResolveIssue" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />

                            <div class="mb-4">
                                <label class="form-label fw-800 small text-uppercase text-purple opacity-75 mb-3 ls-1">
                                    <i class="fas fa-pen-fancy me-2"></i> Resolution Statement
                                </label>
                                <textarea name="resolutionNotes"
                                      class="form-control bg-light border-0 py-4 px-4 rounded-4 fw-600 shadow-inner"
                                      style="min-height: 180px; resize: none;"
                                      placeholder="Type the adjustment details here (e.g. 'Reduced 5 meals from total as per medical leave verification...')" required></textarea>
                            </div>

                            <div class="d-flex flex-column flex-md-row gap-3 mt-5">
                                <button type="submit" class="btn btn-purple-gradient rounded-pill px-5 py-3 fw-900 flex-grow-1 transition-all">
                                    <i class="fas fa-check-circle me-2"></i> CONFIRM RESOLUTION
                                </button>
                                <a asp-action="BillIssues" class="btn btn-light rounded-pill px-5 py-3 fw-800 text-muted border-0">
                                    CANCEL
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>

            <div class="mt-4 text-center">
                <div class="d-inline-flex align-items-center gap-2 px-3 py-2 bg-white rounded-pill shadow-sm border border-light opacity-75">
                    <i class="fas fa-shield-halved text-purple small"></i>
                    <p class="small text-muted mb-0 fw-600">The teacher will be notified via dashboard upon resolution.</p>
                </div>
            </div>
        </div>
    </div>
</div>