@model List<MessManagementSystem.Models.Shared.ContactMessage>
@{
    ViewData["Title"] = "Inquiry Inbox";
}

<style>
    /* Purple Theme Overrides */
    .text-purple {
        color: var(--primary-purple) !important;
    }

    .bg-purple-light {
        background: rgba(99, 102, 241, 0.1) !important;
    }

    .badge-purple {
        background: var(--primary-gradient) !important;
        color: white !important;
        box-shadow: 0 4px 10px rgba(99, 102, 241, 0.2);
    }

    .list-group-item-action:hover {
        background-color: rgba(99, 102, 241, 0.03) !important;
        transform: translateX(5px);
    }

    .ls-1 {
        letter-spacing: 1px;
    }

    /* Fix scrollbar for purple theme */
    .card::-webkit-scrollbar {
        width: 6px;
    }

    .card::-webkit-scrollbar-thumb {
        background: var(--primary-purple);
        border-radius: 10px;
    }
</style>

<div class="container-fluid py-2">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div data-aos="fade-right">
            <h2 class="fw-900 mb-0 text-dark-emphasis">
                <i class="fas fa-mailbox me-2 text-purple"></i> Inquiry Inbox
            </h2>
            <p class="text-muted small mb-0 fw-600">Manage messages and feedback from website visitors and faculty.</p>
        </div>

        <div data-aos="fade-left">
            @{
                var unreadCount = Model.Count(m => !m.IsRead);
            }
            <div class="bg-white border rounded-pill px-4 py-2 shadow-sm d-inline-flex align-items-center">
                <span class="small fw-800 text-uppercase opacity-50 me-2 ls-1">New Messages:</span>
                <span class="badge rounded-pill @(unreadCount > 0 ? "badge-purple" : "bg-light text-muted")">@unreadCount</span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm p-5 text-center" style="border-radius: 28px; background: var(--glass-bg); backdrop-filter: blur(10px);">
            <div class="bg-light d-inline-flex p-4 rounded-circle mb-3 mx-auto">
                <i class="fas fa-comment-slash fa-3x opacity-20"></i>
            </div>
            <h5 class="fw-800 text-muted">No messages received yet.</h5>
            <p class="small text-muted mb-0">When visitors contact you, they will appear here.</p>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-lg overflow-hidden" style="border-radius: 28px; background: var(--glass-bg); backdrop-filter: blur(15px);" data-aos="fade-up">
            <div class="list-group list-group-flush">
                @foreach (var msg in Model.OrderByDescending(m => m.CreatedAt))
                {
                    <a asp-action="ViewMessage" asp-route-id="@msg.Id"
                       class="list-group-item list-group-item-action p-4 border-bottom transition-all @(msg.IsRead ? "" : "bg-white shadow-sm")"
                       style="border-color: rgba(0,0,0,0.03) !important;">

                        <div class="d-flex align-items-center gap-4">
                            <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 shadow-sm"
                                 style="width: 52px; height: 52px; background: @(msg.IsRead ? "rgba(0,0,0,0.05)" : "rgba(99, 102, 241, 0.1)"); color: @(msg.IsRead ? "#adb5bd" : "var(--primary-purple)")">
                                <i class="fas fa-@(msg.IsRead ? "envelope-open" : "envelope-dot animate__animated animate__pulse animate__infinite") fa-lg"></i>
                            </div>

                            <div class="flex-grow-1 min-width-0">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h5 class="mb-0 fw-800 @(msg.IsRead ? "text-muted" : "text-dark-emphasis") text-truncate" style="max-width: 80%; font-size: 1.05rem;">
                                        @msg.Subject
                                    </h5>
                                    <small class="text-muted fw-700" style="font-size: 0.75rem;">
                                        <i class="far fa-clock me-1 text-purple"></i> @msg.CreatedAt.ToString("dd MMM, hh:mm tt")
                                    </small>
                                </div>

                                <div class="d-flex align-items-center gap-3">
                                    <span class="small fw-800 text-purple">@msg.Email</span>
                                    <span class="opacity-25 text-muted">|</span>
                                    <span class="small text-muted text-truncate fw-500">Tap to read full inquiry...</span>
                                </div>
                            </div>

                            <div class="ms-auto d-none d-md-block">
                                <span class="btn btn-sm btn-light rounded-pill px-4 fw-800 text-muted small border-0 shadow-sm">
                                    OPEN <i class="fas fa-chevron-right ms-2 text-purple" style="font-size: 0.7rem;"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    }
</div>