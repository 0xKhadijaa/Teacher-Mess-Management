@model List<MessManagementSystem.Models.Shared.ContactMessage>
@{
    ViewData["Title"] = "Inquiry Inbox";
}

<div class="container-fluid py-2">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div data-aos="fade-right">
            <h2 class="fw-800 mb-0 text-dark-emphasis">
                <i class="fas fa-mailbox me-2 text-primary"></i> Inquiry Inbox
            </h2>
            <p class="text-muted small mb-0">Manage messages and feedback from website visitors and faculty.</p>
        </div>

        <div data-aos="fade-left">
            @{
                var unreadCount = Model.Count(m => !m.IsRead);
            }
            <div class="bg-white border rounded-pill px-3 py-2 shadow-sm d-inline-flex align-items-center">
                <span class="small fw-800 text-uppercase opacity-50 me-2">New Messages:</span>
                <span class="badge rounded-pill @(unreadCount > 0 ? "bg-primary" : "bg-light text-muted")">@unreadCount</span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm p-5 text-center" style="border-radius: 24px; background: var(--glass-bg);">
            <div class="bg-light d-inline-flex p-4 rounded-circle mb-3 mx-auto">
                <i class="fas fa-comment-slash fa-3x opacity-20"></i>
            </div>
            <h5 class="fw-700 text-muted">No messages received yet.</h5>
            <p class="small text-muted mb-0">When visitors contact you, they will appear here.</p>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 24px; background: var(--glass-bg);" data-aos="fade-up">
            <div class="list-group list-group-flush">
                @foreach (var msg in Model.OrderByDescending(m => m.CreatedAt))
                {
                    <a asp-action="ViewMessage" asp-route-id="@msg.Id"
                       class="list-group-item list-group-item-action p-4 border-bottom transition-all @(msg.IsRead ? "" : "bg-white")"
                       style="border-color: rgba(0,0,0,0.05) !important;">

                        <div class="d-flex align-items-center gap-4">
                            <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0"
                                 style="width: 50px; height: 50px; background: @(msg.IsRead ? "rgba(0,0,0,0.04)" : "rgba(99, 102, 241, 0.1)"); color: @(msg.IsRead ? "#999" : "var(--primary-purple)")">
                                <i class="fas fa-@(msg.IsRead ? "envelope-open" : "envelope-dot animate__animated animate__pulse animate__infinite")"></i>
                            </div>

                            <div class="flex-grow-1 min-width-0">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h5 class="mb-0 fw-800 @(msg.IsRead ? "text-muted" : "text-dark") text-truncate" style="max-width: 80%;">
                                        @msg.Subject
                                    </h5>
                                    <small class="text-muted fw-600" style="font-size: 0.75rem;">
                                        <i class="far fa-clock me-1"></i> @msg.CreatedAt.ToString("dd MMM, hh:mm tt")
                                    </small>
                                </div>

                                <div class="d-flex align-items-center gap-3">
                                    <span class="small fw-700 text-primary">@msg.Email</span>
                                    <span class="opacity-25 text-muted">|</span>
                                    <span class="small text-muted text-truncate">Click to view full message details...</span>
                                </div>
                            </div>

                            <div class="ms-auto d-none d-md-block">
                                <span class="btn btn-sm btn-light rounded-pill px-3 fw-bold text-muted small">
                                    View <i class="fas fa-chevron-right ms-1" style="font-size: 0.6rem;"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    }
</div>

<style>
    .list-group-item-action:hover {
        background-color: rgba(99, 102, 241, 0.02) !important;
        transform: scale(1.002);
    }

    .ls-1 {
        letter-spacing: 1px;
    }

    /* Custom scrollbar for better look on long lists */
    .table-responsive::-webkit-scrollbar {
        height: 6px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background: var(--primary-purple);
        border-radius: 10px;
    }
</style>