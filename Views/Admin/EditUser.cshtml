@model MessManagementSystem.Models.Shared.ApplicationUser

@{
    ViewData["Title"] = "Edit User";
    var allRoles = ViewBag.AllRoles as List<string> ?? new List<string>();
    var userRoles = ViewBag.UserRoles as IList<string> ?? new List<string>();
}

<div class="container-fluid py-4">
    <div class="mb-4" data-aos="fade-down">
        <h2 class="fw-800 mb-0 text-dark-emphasis">
            <i class="fas fa-user-edit me-2 text-primary"></i> Modify Profile
        </h2>
        <p class="text-muted small">Update account details, adjust permissions, or reset credentials for <span class="text-primary fw-700">@Model.FullName</span>.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card border-0 shadow-lg animate__animated animate__fadeInUp" style="border-radius: 28px; background: var(--glass-bg); backdrop-filter: blur(20px);">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="EditUser" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="row g-4">
                            <div class="col-md-6 border-end border-white border-opacity-50">
                                <h5 class="fw-800 mb-4 text-primary small text-uppercase ls-1">1. User Identity</h5>

                                <div class="mb-3">
                                    <label class="form-label fw-700 small opacity-75">Full Name</label>
                                    <input type="text" name="fullName" value="@Model.FullName" class="form-control bg-light border-0 py-3 rounded-3 fw-600" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-700 small opacity-75">Department</label>
                                    <input type="text" name="department" value="@Model.Department" class="form-control bg-light border-0 py-3 rounded-3 fw-600" />
                                </div>

                                <div class="mt-4">
                                    <div class="form-check form-switch p-0 d-flex align-items-center gap-3">
                                        <label class="form-check-label fw-800 small text-uppercase opacity-75 mb-0" style="cursor: pointer;">Status:</label>
                                        <input type="checkbox" name="isActive" class="form-check-input ms-0" style="width: 3.5rem; height: 1.75rem; cursor: pointer;" @(Model.IsActive ? "checked" : "") />
                                        <span class="small fw-700 @(Model.IsActive ? "text-success" : "text-danger")">
                                            @(Model.IsActive ? "Account Active" : "Account Suspended")
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h5 class="fw-800 mb-4 text-primary small text-uppercase ls-1">2. Security & Roles</h5>

                                <div class="mb-4">
                                    <label class="form-label fw-700 small opacity-75">Assigned System Roles</label>
                                    <select name="roles" class="form-select bg-light border-0 rounded-3 py-2" multiple style="height: 110px;">
                                        @foreach (var r in allRoles)
                                        {
                                            <option value="@r" selected="@(userRoles.Contains(r))" class="py-2 px-3">@r</option>
                                        }
                                    </select>
                                    <small class="text-muted mt-2 d-block" style="font-size: 0.7rem;">
                                        <i class="fas fa-info-circle me-1"></i> Multi-select: <strong>Cmd/Ctrl + Click</strong>
                                    </small>
                                </div>

                                <div class="p-3 rounded-4 bg-white bg-opacity-50 border border-white">
                                    <label class="form-label fw-700 small text-warning text-uppercase ls-1 mb-2">
                                        <i class="fas fa-key me-1"></i> Reset Password
                                    </label>
                                    <input type="password" name="newPassword" class="form-control bg-light border-0 py-2 rounded-3" placeholder="Enter new password to reset" />
                                    <p class="text-muted mb-0 mt-2" style="font-size: 0.65rem;">Leave empty to keep current password.</p>
                                </div>
                            </div>
                        </div>

                        <hr class="my-5 opacity-10">

                        <div class="d-flex flex-column flex-md-row justify-content-end gap-3">
                            <a asp-action="Users" class="btn btn-light rounded-pill px-4 py-2 fw-bold text-muted">
                                <i class="fas fa-times me-2"></i> Discard
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-800 shadow-lg hover-lift">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ls-1 {
        letter-spacing: 1px;
    }

    .form-control:focus, .form-select:focus {
        background-color: #fff !important;
        box-shadow: 0 10px 20px -10px rgba(99, 102, 241, 0.2);
    }

    .form-check-input:checked {
        background-color: var(--primary-purple);
        border-color: var(--primary-purple);
    }

    /* Multi-select custom scrollbar */
    select[multiple]::-webkit-scrollbar {
        width: 5px;
    }

    select[multiple]::-webkit-scrollbar-thumb {
        background: var(--primary-purple);
        border-radius: 10px;
    }
</style>