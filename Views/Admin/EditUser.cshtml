@model MessManagementSystem.Models.Shared.ApplicationUser

@{
    ViewData["Title"] = "Edit User";
    var allRoles = ViewBag.AllRoles as List<string> ?? new List<string>();
    var userRoles = ViewBag.UserRoles as IList<string> ?? new List<string>();
}

<div class="container mt-4">
    <h2>Edit User</h2>

    <form asp-action="EditUser" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="fullName" value="@Model.FullName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Department</label>
                    <input type="text" name="department" value="@Model.Department" class="form-control" />
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" name="isActive" class="form-check-input" @(Model.IsActive ? "checked" : "") />
                    <label class="form-check-label">Is Active</label>
                </div>

                <div class="mb-3">
                    <label class="form-label">Roles (select multiple)</label>
                    <select name="roles" class="form-control" multiple>
                        @foreach (var r in allRoles)
                        {
                            if (userRoles.Contains(r))
                            {
                                <option value="@r" selected>@r</option>
                            }
                            else
                            {
                                <option value="@r">@r</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">New Password (leave blank to keep)</label>
                    <input type="password" name="newPassword" class="form-control" />
                </div>

                <button class="btn btn-primary">Save</button>
                <a asp-action="Users" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </div>
    </form>
</div>