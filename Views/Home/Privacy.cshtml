@{
    ViewData["Title"] = "Privacy Policy";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    
    body { 
        font-family: 'Inter', sans-serif; 
        background-color: #f8f9fa; 
        color: #1e293b;
    }
    
    .enterprise-card {
        background: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
        animation: fadeIn 0.3s ease;
    }
    
    .enterprise-header {
        background-color: #f8fafc;
        border-bottom: 1px solid #e5e7eb;
        padding: 1.5rem;
        border-radius: 8px 8px 0 0;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="enterprise-card">
                <div class="enterprise-header">
                    <h2 class="mb-0 fw-bold" style="color: #1e293b;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="#2563eb" viewBox="0 0 16 16" class="me-2" style="vertical-align: middle;">
                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                        </svg>
                        @ViewData["Title"]
                    </h2>
                </div>
                <div class="card-body p-5">
                    <p class="lead text-muted mb-4">Your privacy is important to us. This page details how we handle your personal information.</p>

                    <section class="mb-4">
                        <h5 class="fw-bold" style="color: #2563eb;">Information We Collect</h5>
                        <p class="text-muted">We collect information necessary to manage your mess account, including your name, email address, and attendance records.</p>
                    </section>

                    <section class="mb-4">
                        <h5 class="fw-bold" style="color: #2563eb;">How We Use Your Data</h5>
                        <p class="text-muted">Your information is used solely for billing, attendance tracking, and communication related to your mess account. We do not share your data with third parties.</p>
                    </section>

                    <section class="mb-4">
                        <h5 class="fw-bold" style="color: #2563eb;">Data Security</h5>
                        <p class="text-muted">We implement industry-standard security measures to protect your personal information from unauthorized access.</p>
                    </section>

                    <section class="mb-4">
                        <h5 class="fw-bold" style="color: #2563eb;">Contact Us</h5>
                        <p class="text-muted">If you have privacy concerns, please contact us at <a href="mailto:admin@mess.edu" style="color: #2563eb; font-weight: 600;">admin@mess.edu</a></p>
                    </section>

                    <div class="alert alert-info mt-4" role="alert" style="border-radius: 6px; border-left: 4px solid #3b82f6; background-color: #eff6ff; border: 1px solid #bfdbfe;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#3b82f6" viewBox="0 0 16 16" class="me-2" style="vertical-align: middle;">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                        </svg>
                        <strong>Last Updated:</strong> January 2025
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary" style="background-color: #2563eb; border: none; border-radius: 6px; padding: 0.625rem 1.25rem; font-weight: 600;">
                            Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
