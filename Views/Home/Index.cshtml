@{
    ViewData["Title"] = "Welcome to Messly";
}

<style>
    /* PRESERVED HERO STYLES (STRICTLY UNCHANGED STRUCTURE) */
    .push-pin {
        width: 32px;
        height: 32px;
        background: radial-gradient(circle at 30% 30%, #ff4d4d, #b30000);
        border-radius: 50%;
        position: absolute;
        top: -15px;
        left: 60%;
        z-index: 20;
        box-shadow: 0 6px 12px rgba(0,0,0,0.4), inset -3px -3px 6px rgba(0,0,0,0.5);
    }

        .push-pin::after {
            content: '';
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            width: 3px;
            height: 10px;
            background: #888;
        }

    .hero-image-wrapper {
        position: relative;
        padding: 20px;
        transform: rotate(4deg);
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .hero-image-wrapper:hover {
            transform: rotate(0deg) scale(1.05);
        }

    .hero-image-card {
        background: white;
        padding: 12px;
        border-radius: 15px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

        .hero-image-card img {
            border-radius: 10px;
            width: 100%;
            height: auto;
            display: block;
        }

    /* UPDATED GRADIENTS TO PURPLE */
    .text-gradient {
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }

    /* BADDIE PREMIUM THEME STYLES - REFINED PURPLE */
    :root {
        --baddie-purple: #6366f1;
        --deep-indigo: #0f172a;
        --neon-glow: 0 15px 45px rgba(99, 102, 241, 0.3);
    }

    body {
        background-color: #ffffff;
        overflow-x: hidden;
    }

    /* Analytics Card Updates */
    .analytics-card {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.6);
        border-radius: 50px;
        padding: 4.5rem 2.5rem;
        transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.02);
    }

        .analytics-card:hover {
            background: var(--primary-gradient);
            transform: translateY(-20px) scale(1.02);
            box-shadow: var(--neon-glow);
            border-color: transparent;
        }

            .analytics-card:hover h2,
            .analytics-card:hover p,
            .analytics-card:hover i,
            .analytics-card:hover .icon-box {
                color: #fff !important;
            }

            .analytics-card:hover .icon-box {
                background: rgba(255,255,255,0.2) !important;
            }

    .icon-box {
        width: 85px;
        height: 85px;
        background: rgba(99, 102, 241, 0.08);
        border-radius: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2.5rem;
        font-size: 2.2rem;
        color: var(--baddie-purple);
        transition: all 0.4s ease;
    }

    /* CTA Section - Deep Purple Glass */
    .contact-cta-block {
        background: var(--deep-indigo);
        border-radius: 70px;
        padding: 7rem 4rem;
        position: relative;
        overflow: hidden;
        margin-top: 6rem;
        box-shadow: 0 30px 60px rgba(15, 23, 42, 0.3);
    }

        .contact-cta-block::after {
            content: '';
            position: absolute;
            bottom: -20%;
            left: -10%;
            width: 400px;
            height: 400px;
            background: #a855f7;
            filter: blur(160px);
            opacity: 0.2;
        }

    /* Moving Background Glows */
    .bg-glow {
        position: absolute;
        width: 700px;
        height: 700px;
        background: rgba(168, 85, 247, 0.08);
        filter: blur(150px);
        border-radius: 50%;
        z-index: -1;
        animation: drift 20s infinite alternate;
    }

    .ls-2 {
        letter-spacing: 2px;
    }

    .fw-900 {
        font-weight: 900;
    }

    .text-purple {
        color: var(--baddie-purple) !important;
    }
</style>

<div class="position-relative overflow-hidden mb-5" style="min-height: 90vh; background: #ffffff; display: flex; align-items: center;">
    <div class="bg-glow" style="top: 0; right: 0;"></div>
    <div class="container position-relative" style="z-index: 5;">
        <div class="row align-items-center">
            <div class="col-lg-6 text-center text-lg-start" data-aos="fade-right">
                <span class="badge rounded-pill px-3 py-2 mb-4 fw-800" style="background: rgba(99, 102, 241, 0.1); color: var(--baddie-purple);">
                    <i class="fas fa-sparkles me-2"></i> NEXT-GEN MESS MANAGEMENT
                </span>
                <h1 class="display-2 fw-800 mb-4 lh-1 text-dark">Faculty Dining,<br /><span class="text-gradient">Redefined.</span></h1>
                <p class="lead text-muted mb-5" style="max-width: 500px; line-height: 1.6;">An intelligent portal for university departments, administrators, and teachers with a premium dining experience.</p>
                <div class="d-flex flex-column flex-sm-row justify-content-center justify-content-lg-start gap-3">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-lg px-5 py-3 rounded-pill fw-800 shadow-lg text-white" style="background: var(--primary-gradient); border: none;">Get Started <i class="fas fa-arrow-right ms-2"></i></a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-lg px-5 py-3 rounded-pill fw-800 border-2" style="border-color: var(--baddie-purple); color: var(--baddie-purple);">Register</a>
                    }
                    else
                    {
                        <a asp-controller="Teacher" asp-action="Menu" class="btn btn-lg px-5 py-3 rounded-pill fw-800 shadow-lg text-white" style="background: var(--primary-gradient); border: none;">Go to Dashboard <i class="fas fa-gauge-high ms-2"></i></a>
                    }
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block" data-aos="fade-left" data-aos-delay="200">
                <div class="hero-image-wrapper mx-auto" style="max-width: 480px;">
                    <div class="push-pin"></div>
                    <div class="hero-image-card">
                        <img src="https://images.unsplash.com/photo-1543339308-43e59d6b73a6?auto=format&fit=crop&w=800&q=80" alt="Gourmet Food Table">
                        <div class="mt-3 text-center"><h6 class="fw-800 text-muted small text-uppercase mb-0" style="letter-spacing: 2px;">Healthy Dining. Every Day.</h6></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-5 mt-5">
    <div class="text-center mb-5" data-aos="fade-up">
        <h6 class="text-purple fw-900 text-uppercase ls-2 mb-3">The Messly Impact</h6>
        <h2 class="display-4 fw-900 text-dark-emphasis">Designed for <span class="text-gradient">Excellence</span></h2>
    </div>

    <div class="row g-5 mt-2">
        <div class="col-md-4" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="analytics-card">
                <div class="icon-box"><i class="fas fa-bolt-lightning"></i></div>
                <h2 class="fw-900 display-5 mb-2 text-dark">100%</h2>
                <p class="text-muted fw-800 ls-2 small">AUTOMATED FLOW</p>
                <p class="small opacity-60 px-3">End-to-end digital cycle from meal logs to instant financial settlements.</p>
            </div>
        </div>
        <div class="col-md-4" data-aos="zoom-in-up" data-aos-delay="200">
            <div class="analytics-card">
                <div class="icon-box"><i class="fas fa-microchip"></i></div>
                <h2 class="fw-900 display-5 mb-2 text-dark">Zero</h2>
                <p class="text-muted fw-800 ls-2 small">ERROR MARGIN</p>
                <p class="small opacity-60 px-3">Smart cutoff logic and verified roles eliminate discrepancy risks.</p>
            </div>
        </div>
        <div class="col-md-4" data-aos="zoom-in-up" data-aos-delay="300">
            <div class="analytics-card">
                <div class="icon-box"><i class="fas fa-file-invoice"></i></div>
                <h2 class="fw-900 display-5 mb-2 text-dark">Instant</h2>
                <p class="text-muted fw-800 ls-2 small">PDF STATEMENTS</p>
                <p class="small opacity-60 px-3">Download high-fidelity billing reports ready for university submission.</p>
            </div>
        </div>
    </div>
</div>

<div class="container py-5 mb-5">
    <div class="contact-cta-block text-center text-white shadow-lg" data-aos="flip-up">
        <h2 class="display-3 fw-900 mb-4">Have a Question?</h2>
        <p class="lead opacity-75 mb-5 mx-auto fw-500" style="max-width: 600px;">
            Whether you are a new department looking to onboard or a faculty member needing billing support, our hub is live.
        </p>
        <a asp-controller="Contact" asp-action="Index" class="btn btn-white btn-lg px-5 py-3 rounded-pill fw-900 shadow-lg bg-white text-dark border-0 hover-lift">
            OPEN CONTACT HUB <i class="fas fa-location-arrow ms-2 text-purple"></i>
        </a>
        <div class="mt-5 pt-3">
            <span class="opacity-50 small me-3 fw-700 ls-1">DIRECT INQUIRY</span>
            <a href="mailto:support@messly.edu" class="text-white fw-900 text-decoration-none border-bottom border-white border-2 pb-1">support@messly.edu</a>
        </div>
    </div>
</div>

<footer class="pt-5 pb-5">
    <div class="container text-center">
        <h2 class="fw-900 text-dark ls-2 mb-3">Messly<span class="text-purple">.</span></h2>
        <p class="text-muted small fw-600">Transforming campus dining through intelligent automation.</p>
        <div class="d-flex justify-content-center gap-4 my-4">
            <a href="#" class="text-purple opacity-75 hover-lift"><i class="fab fa-instagram fa-lg"></i></a>
            <a href="#" class="text-purple opacity-75 hover-lift"><i class="fab fa-linkedin fa-lg"></i></a>
            <a href="#" class="text-purple opacity-75 hover-lift"><i class="fab fa-x-twitter fa-lg"></i></a>
        </div>
        <hr class="w-25 mx-auto opacity-10 mb-4">
        <p class="small text-muted fw-500">&copy; @DateTime.Now.Year <span class="fw-900 text-purple">Messly</span>. Built for Faculty Excellence.</p>
    </div>
</footer>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        AOS.init({ duration: 1000, once: true, easing: 'ease-out-back' });
    });
</script>