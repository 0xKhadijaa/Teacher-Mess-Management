@model MessManagementSystem.Models.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container d-flex align-items-start justify-content-center min-vh-100 pt-md-5 pt-4">
    <div class="position-absolute top-50 start-50 translate-middle" style="width: 600px; height: 600px; background: rgba(124, 58, 237, 0.08); filter: blur(120px); border-radius: 50%; z-index: -1;"></div>

    <div class="card border-0 shadow-lg overflow-hidden animate__animated animate__fadeInUp" style="max-width: 450px; width: 100%; border-radius: 24px; background: var(--glass-bg); backdrop-filter: blur(20px);">
        <div style="height: 5px; background: var(--primary-gradient);"></div>

        <div class="card-body p-4 p-md-5 pt-4">
            <div class="text-center mb-4">
                <div class="d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 70px; height: 70px; background: var(--soft-purple); border-radius: 20px; color: var(--primary-purple);">
                    <i class="fas fa-shield-keyhole fa-2x animate__animated animate__pulse animate__infinite"></i>
                </div>
                <h3 class="fw-800 mb-1">Recovery</h3>
                <p class="text-muted small">Enter your email to receive a secure reset link.</p>
            </div>

            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger border-0 rounded-4 small py-2 mb-3 animate__animated animate__shakeX">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }

                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-bold small opacity-75">University Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 rounded-start-4"><i class="fas fa-envelope text-muted small"></i></span>
                        <input asp-for="Email" class="form-control bg-transparent border-start-0 rounded-end-4 py-2" placeholder="prof.name@dept.edu" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 shadow-sm mb-3 fw-bold">
                    Send Reset Link <i class="fas fa-paper-plane ms-2"></i>
                </button>
            </form>

            <div class="text-center">
                <a asp-action="Login" asp-controller="Account" class="text-decoration-none small fw-bold text-muted">
                    <i class="fas fa-arrow-left me-1"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>