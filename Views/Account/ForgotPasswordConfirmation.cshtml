@{
    ViewData["Title"] = "Password Reset Requested";
}

<div class="container mt-4">
    <h2>Reset Token Generated</h2>
    <p class="text-muted">For demo purposes the reset token and link are shown below. In production you would email this link to the user.</p>

    <div class="card">
        <div class="card-body">
            <p><strong>Email:</strong> @ViewBag.Email</p>
            <p><strong>Reset Token:</strong></p>
            <pre class="small bg-light p-2">@ViewBag.ResetToken</pre>
            <p><strong>Reset Link:</strong></p>
            <pre class="small bg-light p-2">@ViewBag.CallbackUrl</pre>
        </div>
    </div>
</div>