@model MessManagementSystem.Models.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "New Password";
    var email = ViewBag.Email ?? "";
}

<div class="container d-flex align-items-start justify-content-center min-vh-100 pt-md-5 pt-4">
    <div class="position-absolute top-50 start-50 translate-middle" style="width: 500px; height: 500px; background: rgba(168, 85, 247, 0.08); filter: blur(100px); border-radius: 50%; z-index: -1;"></div>

    <div class="card border-0 shadow-lg animate__animated animate__fadeInUp" style="max-width: 450px; width: 100%; border-radius: 24px; background: var(--glass-bg); backdrop-filter: blur(20px);">
        <div style="height: 5px; background: var(--primary-gradient);"></div>

        <div class="card-body p-4 p-md-5 pt-4">
            <div class="text-center mb-4">
                <h3 class="fw-800 mb-2">New Password</h3>
                <div class="d-inline-flex align-items-center px-3 py-1 rounded-pill" style="background: rgba(99, 102, 241, 0.1); color: var(--primary-purple);">
                    <i class="fas fa-user-check me-2 small"></i>
                    <span class="small fw-bold">@email</span>
                </div>
            </div>

            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Email" value="@email" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger border-0 rounded-4 small py-2 mb-3">
                        <div asp-validation-summary="All" class="text-danger mb-0"></div>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label fw-bold small opacity-75">New Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 rounded-start-4"><i class="fas fa-lock text-muted small"></i></span>
                        <input asp-for="NewPassword" type="password" class="form-control bg-transparent border-start-0 rounded-end-4 py-2" placeholder="••••••••" required />
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold small opacity-75">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 rounded-start-4"><i class="fas fa-check-double text-muted small"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control bg-transparent border-start-0 rounded-end-4 py-2" placeholder="••••••••" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 shadow-sm fw-bold">
                    Update Password <i class="fas fa-circle-check ms-2"></i>
                </button>
            </form>
        </div>
    </div>
</div>