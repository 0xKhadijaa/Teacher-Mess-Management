@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid px-0">
    <div class="row g-0">
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center vh-100" style="background: var(--primary-gradient);">
            <div class="text-center text-white p-5" data-aos="zoom-in">
                <i class="fas fa-user-plus display-2 mb-4"></i>
                <h1 class="fw-800 display-4">Join Us</h1>
                <p class="lead opacity-75">Register your faculty account in seconds.</p>
            </div>
        </div>

        <div class="col-lg-6 d-flex align-items-start align-items-lg-center justify-content-center bg-app pt-5 pt-lg-0">
            <div class="p-4 p-md-5 w-100" style="max-width: 480px;" data-aos="fade-up">
                <div class="mb-4">
                    <h2 class="fw-800 mb-1">Register</h2>
                    <p class="text-muted small">Provide your details to get started.</p>
                </div>

                <form method="post" asp-action="Register" asp-controller="Account">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger border-0 rounded-4 small py-2 mb-3">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold small opacity-75">Full Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-3"><i class="fas fa-user text-muted small"></i></span>
                            <input name="fullName" class="form-control border-start-0 rounded-end-3 py-2" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small opacity-75">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-3"><i class="fas fa-envelope text-muted small"></i></span>
                            <input name="email" type="email" class="form-control border-start-0 rounded-end-3 py-2" required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold small opacity-75">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-3"><i class="fas fa-lock text-muted small"></i></span>
                            <input name="password" type="password" class="form-control border-start-0 rounded-end-3 py-2" required minlength="6" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm mb-4 fw-bold">Create Account</button>
                </form>

                <div class="text-center pt-3 border-top border-opacity-10">
                    <a asp-action="Login" asp-controller="Account" class="text-decoration-none small fw-bold text-primary">Already have an account? Login</a>
                </div>
            </div>
        </div>
    </div>
</div>