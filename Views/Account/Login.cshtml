@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-1">Mess Login</h2>
    <p class="text-muted text-center mb-4 small">Sign in with your department email to manage your mess account.</p>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" class="form-control" placeholder="e.g. messmanager@dept.edu" required />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" type="password" class="form-control" placeholder="••••••••" required />
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-2">Login</button>
        <div class="text-center">
            <a asp-action="ForgotPassword" class="small">Forgot your password?</a>
        </div>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Index" asp-controller="Home" class="btn btn-link">Back to Home</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}