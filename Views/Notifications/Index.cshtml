@model List<MessManagementSystem.Models.Shared.Notification>
@{
    ViewData["Title"] = "Notifications";
    bool isAdmin = User.IsInRole("Admin");
    var unreadCount = Model?.Count(n => !n.IsRead) ?? 0;
}

<div class="container-fluid py-1">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
        <div data-aos="fade-right">
            <h3 class="fw-800 mb-0 text-dark-emphasis">Inbox</h3>
            <p class="text-muted small mb-0">You have <span class="text-primary fw-bold">@unreadCount unread</span> messages</p>
        </div>

        <div class="d-flex gap-2" data-aos="fade-left">
            @if (Model?.Any() == true)
            {
                if (isAdmin)
                {
                    <button type="submit" form="deleteSelectedForm" class="btn btn-danger btn-sm px-3 rounded-pill fw-bold shadow-sm"
                            onclick="return confirm('Delete selected?');">
                        <i class="fas fa-trash-alt me-1"></i> Delete
                    </button>
                }
                else
                {
                    <form asp-action="MarkAllRead" method="post">
                        <button type="submit" class="btn btn-primary bg-primary bg-opacity-10 text-primary border-0 btn-sm px-3 rounded-pill fw-bold">
                            <i class="fas fa-check-double me-1"></i> Mark All Read
                        </button>
                    </form>
                }
            }
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-3" style="border-radius: 15px; background: var(--glass-bg);">
        <div class="card-body p-1">
            <ul class="nav nav-pills nav-fill small fw-bold">
                <li class="nav-item">
                    <a class="nav-link active rounded-pill py-2" href="#" onclick="filterNotifications('all')">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-muted rounded-pill py-2" href="#" onclick="filterNotifications('unread')">
                        Unread @if(unreadCount > 0){
                        <span class="badge bg-primary ms-1">@unreadCount</span>
                                                }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-muted rounded-pill py-2" href="#" onclick="filterNotifications('read')">History</a>
                </li>
            </ul>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5" data-aos="fade-up">
            <i class="fas fa-smile fa-3x text-muted opacity-25 mb-3"></i>
            <h5 class="text-muted fw-600">All caught up!</h5>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 20px; background: var(--glass-bg);">
            <div class="list-group list-group-flush">
                @foreach (var n in Model.OrderByDescending(n => n.CreatedAt))
                {
                    <div class="list-group-item p-3 border-bottom transition-all notification-item @(n.IsRead ? "is-read" : "is-unread bg-white")"
                         data-status="@(n.IsRead ? "read" : "unread")"
                         style="border-color: rgba(0,0,0,0.05) !important;">

                        <div class="d-flex align-items-center gap-3">
                            @if (isAdmin)
                            {
                                <input class="form-check-input mt-0" type="checkbox" name="selectedIds" value="@n.Id" form="deleteSelectedForm">
                            }

                            <div class="rounded-circle d-flex align-items-center justify-content-center"
                                 style="width: 40px; height: 40px; background: @(n.IsRead ? "rgba(0,0,0,0.04)" : "rgba(99, 102, 241, 0.1)"); color: @(n.IsRead ? "#999" : "var(--primary-purple)")">
                                <i class="fas fa-@(n.IsRead ? "envelope-open" : "envelope")"></i>
                            </div>

                            <div class="flex-grow-1 min-width-0">
                                <a href="@Url.Action("Details", "Notifications", new { id = n.Id })" class="text-decoration-none text-dark">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="fw-700 mb-0 text-truncate @(n.IsRead ? "text-muted" : "text-dark")">@n.Title</h6>
                                        <small class="text-muted flex-shrink-0 ms-2" style="font-size: 0.7rem;">@n.CreatedAt.ToString("HH:mm")</small>
                                    </div>
                                    <p class="mb-0 small text-muted text-truncate">@n.Message</p>
                                </a>
                            </div>

                            @if (!isAdmin && !n.IsRead)
                            {
                                <form asp-action="MarkRead" method="post" class="ms-2">
                                    <input type="hidden" name="id" value="@n.Id" />
                                    <button type="submit" class="btn btn-sm btn-link text-primary p-0"><i class="fas fa-check"></i></button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function filterNotifications(filter) {
            // Update UI tabs
            document.querySelectorAll('.nav-link').forEach(el => {
                el.classList.remove('active', 'text-white');
                el.classList.add('text-muted');
            });
            event.currentTarget.classList.add('active');
            event.currentTarget.classList.remove('text-muted');

            // Filter Logic
            const items = document.querySelectorAll('.notification-item');
            items.forEach(item => {
                if (filter === 'all') {
                    item.style.display = 'block';
                } else if (filter === 'unread') {
                    item.style.display = item.dataset.status === 'unread' ? 'block' : 'none';
                } else if (filter === 'read') {
                    item.style.display = item.dataset.status === 'read' ? 'block' : 'none';
                }
            });
        }
    </script>
}