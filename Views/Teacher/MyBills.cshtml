@model List<MessManagementSystem.Models.Shared.BillDetailsViewModel>

@{
    ViewData["Title"] = "My Bills";
}

<div class="container-fluid py-2">
    <div class="row g-3 mb-4 align-items-center">
        <div class="col-md-6" data-aos="fade-right">
            <h2 class="fw-800 mb-0 text-dark-emphasis">🧾 My Bills</h2>
            <p class="text-muted small mb-0">Track your monthly mess expenses and history.</p>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert border-0 shadow-sm rounded-4 p-4 bg-white text-center" data-aos="fade-up">
            <div class="bg-light d-inline-flex p-3 rounded-circle mb-3">
                <i class="fas fa-inbox fa-2x opacity-25"></i>
            </div>
            <h5 class="text-muted">No bills found yet.</h5>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var bill in Model)
            {
                <div class="col-md-6" data-aos="fade-up">
                    <div class="card border-0 shadow-sm transition-all hover-lift h-100" style="border-radius: 20px; background: var(--glass-bg); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.4);">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="fw-800 mb-1" style="color: var(--primary-purple) !important;">@bill.BillingPeriodStart.ToString("MMMM yyyy")</h5>
                                    <div class="text-muted small fw-600">
                                        <i class="fas fa-university me-1 opacity-50"></i> Dept: @bill.TeacherDepartment
                                    </div>
                                </div>
                                <div class="text-end">
                                    @if (bill.IsPaid)
                                    {
                                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success px-3 py-2 fw-700">
                                            <i class="fas fa-check-circle me-1"></i> Paid
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger px-3 py-2 fw-700">
                                            <i class="fas fa-clock me-1"></i> Pending
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="bg-light bg-opacity-50 rounded-4 p-3 mb-3 border border-white border-opacity-50">
                                <div class="row g-2 text-center">
                                    <div class="col-4 border-end border-white">
                                        <small class="d-block text-uppercase opacity-50 fw-800" style="font-size: 0.6rem;">Meals</small>
                                        <span class="fw-700">@bill.TotalMeals</span>
                                    </div>
                                    <div class="col-4 border-end border-white">
                                        <small class="d-block text-uppercase opacity-50 fw-800" style="font-size: 0.6rem;">Utility</small>
                                        <span class="fw-700">₹@bill.UtilityCharge</span>
                                    </div>
                                    <div class="col-4">
                                        <small class="d-block text-uppercase opacity-50 fw-800" style="font-size: 0.6rem;">Dues</small>
                                        <span class="fw-700 text-danger">₹@bill.PreviousDues</span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="text-muted small fw-bold">Total Amount</span>
                                <span class="h4 fw-800 text-dark mb-0">₹@bill.TotalAmount</span>
                            </div>

                            <div class="d-flex flex-wrap gap-2">
                                <a asp-controller="Teacher" asp-action="DownloadBill" asp-route-id="@bill.BillId"
                                   class="btn btn-sm btn-white border rounded-pill px-3 fw-bold shadow-sm flex-grow-1 hover-lift">
                                    <i class="fas fa-file-pdf me-1 text-danger"></i> PDF
                                </a>

                                @if (!bill.IsPaid)
                                {
                                    <a asp-controller="Teacher" asp-action="PayBillDemo" asp-route-id="@bill.BillId"
                                       class="btn btn-sm text-white rounded-pill px-3 fw-bold shadow-sm flex-grow-1 hover-lift"
                                       style="background: var(--primary-gradient); border: none;">
                                        <i class="fas fa-credit-card me-1"></i> Pay Demo
                                    </a>

                                    <a asp-controller="Teacher" asp-action="ReportBillIssue" asp-route-billId="@bill.BillId"
                                       class="btn btn-sm btn-outline-warning rounded-pill px-3 fw-bold flex-grow-1 hover-lift">
                                        <i class="fas fa-bug me-1"></i> Issue
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>