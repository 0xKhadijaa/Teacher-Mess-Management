@model List<MessManagementSystem.Models.Shared.BillDetailsViewModel>

<h2 class="mb-4">🧾 My Bills</h2>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info" data-aos="fade-up">No bills yet.</div>
}
else
{
    <div class="row g-3">
        @foreach (var bill in Model)
        {
            <div class="col-md-6" data-aos="fade-up">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5>@bill.BillingPeriodStart.ToString("MMMM yyyy")</h5>
                                <div class="text-muted small">
                                    @bill.TeacherName (@bill.TeacherEmail)<br />
                                    Dept: @bill.TeacherDepartment
                                </div>
                                <div class="text-muted mt-1">Meals: @bill.TotalMeals | Utility: Rs @bill.UtilityCharge</div>
                            </div>
                            <div class="text-end">
                                @if (bill.IsPaid)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pending</span>
                                }
                            </div>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-between">
                            <div>
                                <div>Previous Dues</div>
                                <div class="fw-bold">Rs @bill.PreviousDues</div>
                            </div>
                            <div>
                                <div>Total</div>
                                <div class="fw-bold">Rs @bill.TotalAmount</div>
                            </div>
                        </div>

                        <div class="mt-3 d-flex justify-content-end gap-2">
                            <a asp-controller="Teacher" asp-action="DownloadBill" asp-route-id="@bill.BillId" class="btn btn-sm btn-outline-secondary">📄 Download PDF</a>
                            @if (!bill.IsPaid)
                            {
                                <a asp-controller="Teacher" asp-action="PayBillDemo" asp-route-id="@bill.BillId" class="btn btn-sm btn-success">💳 Pay Online (Demo)</a>
                                <a asp-controller="Teacher" asp-action="ReportBillIssue" asp-route-billId="@bill.BillId" class="btn btn-sm btn-warning">📝 Report Issue</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}