@model List<MessManagementSystem.Models.Shared.Attendance>

@{
    ViewData["Title"] = "Faculty Attendance";
    var canEdit = ViewBag.CanEdit ?? false;
    var today = DateOnly.FromDateTime(DateTime.Today);
    var disabledAttr = canEdit ? null : "disabled";
}

<div class="container-fluid py-2">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div data-aos="fade-right">
            <h2 class="fw-800 mb-0 text-dark-emphasis">Faculty Attendance</h2>
            <p class="text-muted small mb-0">
                <i class="fas fa-users-viewfinder me-1 text-primary"></i> Master View
                <span class="mx-2 opacity-25">|</span>
                <i class="fas fa-calendar-check me-1 text-primary"></i> @today.ToString("dd MMM yyyy")
            </p>
        </div>

        @if (canEdit)
        {
            <div data-aos="fade-left">
                <button type="submit" form="attendanceForm" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm fw-bold transition-all">
                    <i class="fas fa-save me-2"></i> Save All Changes
                </button>
            </div>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert border-0 shadow-sm rounded-4 mb-4 bg-success bg-opacity-10 text-success d-flex align-items-center animate__animated animate__fadeIn">
            <i class="fas fa-check-circle me-3 h5 mb-0"></i>
            <span class="small fw-600">@TempData["Success"]</span>
        </div>
    }

    <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 24px;" data-aos="fade-up">
        <form id="attendanceForm" asp-action="AllAttendance" method="post">
            <input type="hidden" name="Date" value="@today" />

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background: rgba(99, 102, 241, 0.05);">
                        <tr>
                            <th class="ps-4 py-3 border-0 small text-uppercase fw-800 opacity-50">Teacher Detail</th>
                            <th class="py-3 border-0 text-center small text-uppercase fw-800 opacity-50">Breakfast</th>
                            <th class="py-3 border-0 text-center small text-uppercase fw-800 opacity-50">Lunch</th>
                            <th class="py-3 border-0 text-center small text-uppercase fw-800 opacity-50">Dinner</th>
                            <th class="pe-4 py-3 border-0 small text-uppercase fw-800 opacity-50">@(canEdit ? "Notes" : "")</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <input type="hidden" name="[@i].Id" value="@Model[i].Id" />
                                    <input type="hidden" name="[@i].TeacherId" value="@Model[i].TeacherId" />
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3 fw-bold text-primary" style="width: 35px; height: 35px; font-size: 0.8rem;">
                                            @(Model[i].Teacher?.FullName?.Substring(0, 1).ToUpper() ?? "T")
                                        </div>
                                        <div>
                                            <span class="fw-700 d-block text-dark-emphasis">@Model[i].Teacher?.FullName</span>
                                            <span class="text-muted" style="font-size: 0.75rem;">@Model[i].Teacher?.Email</span>
                                        </div>
                                    </div>
                                </td>

                                @* Breakfast Toggle *@
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input" type="checkbox" name="[@i].HadBreakfast" value="true"
                                               @(Model[i].HadBreakfast ? "checked" : "") disabled="@disabledAttr" />
                                        @if (!canEdit && Model[i].HadBreakfast)
                                        {
                                            <span class="d-none">✅</span>
                                        }
                                    </div>
                                </td>

                                @* Lunch Toggle *@
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input" type="checkbox" name="[@i].HadLunch" value="true"
                                               @(Model[i].HadLunch ? "checked" : "") disabled="@disabledAttr" />
                                    </div>
                                </td>

                                @* Dinner Toggle *@
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input" type="checkbox" name="[@i].HadDinner" value="true"
                                               @(Model[i].HadDinner ? "checked" : "") disabled="@disabledAttr" />
                                    </div>
                                </td>

                                <td class="pe-4 py-3">
                                    @if (canEdit)
                                    {
                                        <input type="hidden" name="[@i].Date" value="@today" />
                                        <input name="[@i].SkipReason" class="form-control form-control-sm border-0 bg-light rounded-3"
                                               value="@Model[i].SkipReason" placeholder="Add note..." />
                                    }
                                    else if (!string.IsNullOrEmpty(Model[i].SkipReason))
                                    {
                                        <span class="badge rounded-pill bg-light text-muted fw-normal p-2 px-3 border border-opacity-10">
                                            <i class="fas fa-info-circle me-1"></i> @Model[i].SkipReason
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Menu" class="btn btn-sm btn-link text-decoration-none text-muted fw-bold">
            <i class="fas fa-chevron-left me-1"></i> Back to Weekly Menu
        </a>
    </div>
</div>