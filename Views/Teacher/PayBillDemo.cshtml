@model MessManagementSystem.Models.Shared.Bill

@{
    ViewData["Title"] = "Demo Online Payment";
}

<div class="container mt-4" data-aos="fade-up">
    <h2 class="h4 mb-3">Demo Online Payment</h2>
    <p class="text-muted small">
        This is a <strong>demo</strong> payment screen. No real money is transferred; confirming will simply mark the bill as paid in the system.
    </p>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-1">@Model.BillingPeriodStart.ToString("MMMM yyyy")</h5>
            <p class="text-muted mb-3">
                Total Amount: <strong>Rs @Model.TotalAmount</strong><br />
                Previous Dues: Rs @Model.PreviousDues
            </p>

            <form asp-action="PayBillDemoConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Cardholder Name (demo)</label>
                        <input class="form-control" placeholder="e.g. @Model.Student?.FullName" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Card Number (demo)</label>
                        <input class="form-control" placeholder="1111 2222 3333 4444" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Expiry (demo)</label>
                        <input class="form-control" placeholder="12/30" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">CVV (demo)</label>
                        <input class="form-control" placeholder="123" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Amount</label>
                        <input class="form-control" value="@Model.TotalAmount" readonly />
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="MyBills" class="btn btn-outline-secondary">Back to Bills</a>
                    <button type="submit" class="btn btn-success">
                        Confirm Demo Payment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

