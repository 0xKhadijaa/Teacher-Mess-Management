@model MessManagementSystem.Models.Shared.Attendance

@{
    ViewData["Title"] = "Attendance";
}

<div class="container-fluid mt-2 mt-md-0">
    <div class="row mb-3 align-items-center">
        <div class="col">
            <h2 class="h4 mb-0">Today’s Attendance</h2>
            <small class="text-muted">Teacher: @ViewBag.TeacherName</small>
        </div>
        <div class="col-auto text-end">
            <span class="badge bg-light text-dark">
                @DateTime.Today.ToString("dddd, dd MMM yyyy")
            </span>
        </div>
    </div>

    @if (ViewBag.EditCutoffPassed)
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fas fa-clock me-2"></i>
            <div>Attendance can only be updated before <strong>9:00 AM</strong>. You can still review today’s status.</div>
        </div>
    }

    <div class="card shadow-sm" data-aos="fade-up">
        <div class="card-body">
            <form asp-action="Attendance" method="post" id="attendanceForm">
                <input type="hidden" asp-for="TeacherId" />

                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input asp-for="HadBreakfast" class="form-check-input" />
                            <label asp-for="HadBreakfast" class="form-check-label">
                                Breakfast
                                <small class="d-block text-muted">Morning meal</small>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input asp-for="HadLunch" class="form-check-input" />
                            <label asp-for="HadLunch" class="form-check-label">
                                Lunch
                                <small class="d-block text-muted">Afternoon meal</small>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input asp-for="HadDinner" class="form-check-input" />
                            <label asp-for="HadDinner" class="form-check-label">
                                Dinner
                                <small class="d-block text-muted">Evening meal</small>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mb-3 mt-4">
                    <label asp-for="SkipReason" class="form-label">Reason for skipping meals (optional)</label>
                    <input asp-for="SkipReason" class="form-control" placeholder="e.g. On leave, out of city" />
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">
                        Changes are logged with time and can be viewed by the mess manager.
                    </small>
                    <button id="attendanceSubmit"
                            class="btn btn-primary"
                            @(ViewBag.CanEdit ? "" : "disabled")>
                        <span class="spinner-border spinner-border-sm me-1 d-none" role="status" aria-hidden="true"></span>
                        Save Attendance
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Lightweight async UX: button spinner + disable on submit
        (function () {
            var form = document.getElementById('attendanceForm');
            if (!form) return;
            form.addEventListener('submit', function () {
                var btn = document.getElementById('attendanceSubmit');
                if (!btn) return;
                var spinner = btn.querySelector('.spinner-border');
                btn.setAttribute('disabled', 'disabled');
                if (spinner) spinner.classList.remove('d-none');
            });
        })();
    </script>
}