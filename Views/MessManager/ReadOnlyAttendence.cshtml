@model MessManagementSystem.Models.Shared.Attendance

@{
    ViewData["Title"] = "Attendance Access";
}

<style>
    /* Purple Theme Overrides */
    .text-purple {
        color: var(--primary-purple) !important;
    }

    .bg-purple-light {
        background: rgba(99, 102, 241, 0.1) !important;
    }

    .btn-purple-gradient {
        background: var(--primary-gradient) !important;
        border: none !important;
        color: white !important;
        box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
    }

        .btn-purple-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.3);
            color: white !important;
        }

    .ls-1 {
        letter-spacing: 1px;
    }

    .fw-900 {
        font-weight: 900;
    }
</style>

<div class="container-fluid py-2">
    <div class="mb-4" data-aos="fade-down">
        <h2 class="fw-900 mb-0 text-dark-emphasis">Attendance Access</h2>
        <p class="text-muted small fw-600">Access level and permission overview for <span class="text-purple">Mess Managers</span>.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card border-0 shadow-lg overflow-hidden animate__animated animate__fadeIn"
                 style="border-radius: 35px; background: var(--glass-bg); backdrop-filter: blur(25px); border: 1px solid rgba(255,255,255,0.5);">

                <div class="card-body p-4 p-md-5">

                    <div class="alert border-0 rounded-4 mb-5 d-flex align-items-center py-3 bg-white bg-opacity-50 shadow-sm border border-white">
                        <div class="bg-purple-light p-3 rounded-circle me-3">
                            <i class="fas fa-shield-halved text-purple h4 mb-0"></i>
                        </div>
                        <div class="small fw-600">
                            <span class="text-purple d-block fw-900 text-uppercase ls-1" style="font-size: 0.7rem;">Managerial Protocol</span>
                            As a Mess Manager, you have <span class="text-purple fw-800">Read-Only</span> master access to facilitate meal preparation and logistical stock planning.
                        </div>
                    </div>

                    <div class="row g-4 mb-5">
                        <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
                            <div class="card h-100 border-0 shadow-sm p-4 text-center transition-all hover-lift"
                                 style="border-radius: 25px; background: rgba(255,255,255,0.4);">
                                <div class="bg-success bg-opacity-10 p-3 rounded-4 text-success d-inline-block mx-auto mb-3 shadow-sm">
                                    <i class="fas fa-user-tie fa-2x"></i>
                                </div>
                                <h6 class="fw-800 text-uppercase small opacity-50 mb-2 ls-1">Faculty</h6>
                                <p class="fw-700 text-dark-emphasis mb-0">Individual Daily Markings</p>
                            </div>
                        </div>

                        <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
                            <div class="card h-100 border-0 shadow-lg p-4 text-center transition-all hover-lift"
                                 style="border-radius: 25px; background: var(--primary-gradient); color: white;">
                                <div class="bg-white bg-opacity-20 p-3 rounded-4 d-inline-block mx-auto mb-3 shadow-sm">
                                    <i class="fas fa-eye fa-2x"></i>
                                </div>
                                <h6 class="text-white opacity-75 text-uppercase small fw-900 mb-2 ls-1">Your Access</h6>
                                <p class="fw-800 mb-0">Master View & Data Audit</p>
                            </div>
                        </div>

                        <div class="col-md-4" data-aos="zoom-in" data-aos-delay="300">
                            <div class="card h-100 border-0 shadow-sm p-4 text-center transition-all hover-lift"
                                 style="border-radius: 25px; background: rgba(255,255,255,0.4);">
                                <div class="bg-warning bg-opacity-10 p-3 rounded-4 text-warning d-inline-block mx-auto mb-3 shadow-sm">
                                    <i class="fas fa-crown fa-2x"></i>
                                </div>
                                <h6 class="fw-800 text-uppercase small opacity-50 mb-2 ls-1">Admin</h6>
                                <p class="fw-700 text-dark-emphasis mb-0">System Authority</p>
                            </div>
                        </div>
                    </div>

                    <div class="text-center bg-white bg-opacity-40 p-4 rounded-4 mb-5 border border-white">
                        <p class="text-muted small mb-0 max-width-600 mx-auto fw-500">
                            <i class="fas fa-circle-info me-2 text-purple"></i>
                            Attendance data is synchronized in real-time. For permanent records or manual attendance corrections, please coordinate with the <strong>Administration Office</strong>.
                        </p>
                    </div>

                    <div class="text-center">
                        <a asp-action="Menu" asp-controller="Teacher" class="btn btn-purple-gradient btn-lg rounded-pill px-5 py-3 fw-900 transition-all">
                            <i class="fas fa-arrow-left me-2"></i> BACK TO DASHBOARD
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>