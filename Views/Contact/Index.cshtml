@model MessManagementSystem.Models.Shared.ContactMessage
@{
    ViewData["Title"] = "Contact Us";
}

<style>
    .glass-contact-card {
        background: var(--glass-bg);
        backdrop-filter: blur(25px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 40px;
        box-shadow: 0 25px 50px -12px rgba(99, 102, 241, 0.15);
    }

    .contact-header-gradient {
        background: var(--primary-gradient);
        padding: 3rem 2rem;
        color: white;
        text-align: center;
        border-radius: 40px 40px 0 0;
    }

    .baddie-input {
        background: rgba(255, 255, 255, 0.6) !important;
        border: 2px solid transparent !important;
        border-radius: 18px !important;
        padding: 0.8rem 1.2rem !important;
    }

        .baddie-input:focus {
            border-color: var(--primary-purple) !important;
            background: #fff !important;
        }

    .btn-purple-glow {
        background: var(--primary-gradient);
        color: white;
        border-radius: 50px;
        padding: 1rem;
        font-weight: 800;
        border: none;
    }

    .form-error {
        display: none;
        color: #ef4444;
        font-size: 0.875rem;
        font-weight: 600;
        margin-top: 5px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="glass-contact-card" data-aos="zoom-in">
                <div class="contact-header-gradient">
                    <h2 class="fw-900 mb-0">Get in Touch</h2>
                    <p class="opacity-75 small fw-600 mb-0">MESSLY SUPPORT HUB</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form id="contactForm">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-800 small text-uppercase opacity-50 ms-2">Email</label>
                            <input asp-for="Email" id="emailInput" class="form-control baddie-input" placeholder="your@email.com" />
                            <span id="emailError" class="form-error"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-800 small text-uppercase opacity-50 ms-2">Subject</label>
                            <input asp-for="Subject" id="subjectInput" class="form-control baddie-input" placeholder="How can we help?" />
                            <span id="subjectError" class="form-error"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-800 small text-uppercase opacity-50 ms-2">Message</label>
                            <textarea asp-for="Message" id="messageInput" class="form-control baddie-input" rows="4"></textarea>
                            <span id="messageError" class="form-error"></span>
                        </div>

                        <button type="submit" id="submitBtn" class="btn btn-purple-glow w-100 fw-900">
                            SEND MESSAGE <i class="fas fa-location-arrow ms-2"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Wrapping in an IIFE prevents Razor from misinterpreting brackets
        (function() {
            const form = document.querySelector('#contactForm');

            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                // Reset UI
                document.querySelectorAll('.form-error').forEach(el => el.style.display = 'none');
                const btn = document.querySelector('#submitBtn');
                const originalText = btn.innerHTML;

                btn.disabled = true;
                btn.innerHTML = 'SENDING...';

                const formData = new FormData(form);

                try {
                    const response = await fetch('/Contact/Index', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        alert(result.message);
                        form.reset();
                    } else if (result.errors) {
                        // Display validation errors
                        for (const key in result.errors) {
                            const errorId = key.toLowerCase() + 'Error';
                            const errorEl = document.getElementById(errorId);
                            if (errorEl) {
                                errorEl.innerText = result.errors[key][0];
                                errorEl.style.display = 'block';
                            }
                        }
                    }
                } catch (err) {
                    alert("Connection error. Please try again.");
                } finally {
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            });
        })();
    </script>
}