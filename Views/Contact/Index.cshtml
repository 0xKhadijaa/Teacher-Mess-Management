@model MessManagementSystem.Models.Shared.ContactMessage
@{
    ViewData["Title"] = "Contact Us";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    body { font-family: 'Inter', sans-serif; background-color: #f8f9fa; }
    .enterprise-card { background: #ffffff; border: 1px solid #e5e7eb; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); border-radius: 8px; animation: fadeIn 0.3s ease; }
    .enterprise-header { background-color: #f8fafc; border-bottom: 1px solid #e5e7eb; padding: 1.5rem; border-radius: 8px 8px 0 0; }
    .enterprise-input { border: 1px solid #d1d5db; border-radius: 6px; padding: 0.75rem 1rem; font-size: 0.9375rem; transition: all 0.2s; }
    .enterprise-input:focus { border-color: #2563eb; box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1); outline: none; }
    .btn-enterprise { background-color: #2563eb; color: white; border-radius: 6px; padding: 0.75rem 1.5rem; font-weight: 600; transition: all 0.2s ease; }
    .btn-enterprise:hover { background-color: #1d4ed8; transform: translateY(-1px); color: white; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background-color: #f8f9fa; padding: 40px 0;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="enterprise-card">
                    <div class="enterprise-header">
                        <h4 class="mb-0 fw-bold" style="color: #1e293b;">Contact Mess Admin</h4>
                    </div>
                    <div class="card-body p-5">
                        <p class="text-muted mb-4" style="font-size: 0.9375rem;">Have a question or concern? We're here to help. Send us a message and we'll get back to you soon.</p>

                        <form asp-action="Index" method="post">
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="border-radius: 6px; border-left: 4px solid #dc2626;"></div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-bold" style="color: #374151; font-size: 0.875rem;">Email Address</label>
                                <input asp-for="Email" class="enterprise-input form-control" placeholder="your@email.com" />
                                <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Subject" class="form-label fw-bold" style="color: #374151; font-size: 0.875rem;">Subject</label>
                                <input asp-for="Subject" class="enterprise-input form-control" placeholder="What is this about?" />
                                <span asp-validation-for="Subject" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Message" class="form-label fw-bold" style="color: #374151; font-size: 0.875rem;">Message</label>
                                <textarea asp-for="Message" class="enterprise-input form-control" placeholder="Tell us more..." rows="4" style="min-height: 120px;"></textarea>
                                <span asp-validation-for="Message" class="text-danger small d-block mt-1"></span>
                            </div>

                            <button type="submit" class="btn btn-enterprise w-100">
                                Send Message
                            </button>
                        </form>

                        <div class="text-center mt-3">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-sm" style="border-radius: 6px; padding: 0.5rem 1rem;">
                                ← Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>